{
    "rules": {
        "indent": [2, 4, {"SwitchCase": 1}],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
        "no-console": 0,
        "no-unused-vars": 0,
        "no-empty": 0,
        "flowtype/define-flow-type" : 1,
        "flowtype/no-primitive-constructor-types": 2
    },
    "env": {
        "es6": true,
        "browser": true,
        "commonjs": true,
        "cypress/globals" : true
    },
    "parser" : "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "classes" : true
        }
    },
    "plugins": [
        "react",
        "class-property",
        "flowtype",
        "cypress"
    ]
}
