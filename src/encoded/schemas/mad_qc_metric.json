{
    "description": "Schema for reporting the 'Mean Absolute Deviation' (MAD) quality metric",
    "id": "/profiles/mad_qc_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["step_run"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "quality_metric.json#/properties" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/standard_status"},
        { "$ref": "mixins.json#/assay" }
   ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "attachment": {
            "title": "Document file metadata",
            "type": "object",
            "additionalProperties": false,
            "formInput": "file",
            "properties": {
                "download": {
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "comment": "Internal webapp URL for document file",
                    "type": "string"
                },
                "type": {
                    "title": "MIME type",
                    "type": "string",
                    "enum": [
                        "image/png"
                    ]
                },
                "size": {
                    "title": "File size",
                    "type": "integer"
                },
                "width": {
                    "title": "Image width",
                    "type": "integer"
                },
                "height": {
                    "title": "Image height",
                    "type": "integer"
                }
            }
        },
        "SD of log ratios": {
            "type": "number",
            "description": "Standard Deviation of replicate log ratios from RNA-seq quantification"
        },
        "Pearson correlation": {
            "type": "number",
            "description": "Pearson correlation coefficient of replicates from RNA-seq quantification"
        },
        "Spearman correlation": {
            "type": "number",
            "description": "Spearman correlation coefficient of replicates from RNA-seq quantification"
        },
        "MAD of log ratios": {
            "type": "number",
            "description": "Mean-Average-Deviation of replicate log ratios from RNA-seq quantification"
        }
    }
}
