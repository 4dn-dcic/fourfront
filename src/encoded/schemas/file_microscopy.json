{
    "title": "Microscopy Files",
    "description": "Imaging Files of Microscopy",
    "id": "/profiles/file_microscopy.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["file_format", "award", "lab"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/release_dates" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/dbxrefs" },
        { "$ref": "mixins.json#/attachment" },
        { "$ref": "mixins.json#/tags" },
        { "$ref": "mixins.json#/static_headers" },
        { "$ref": "file.json#/properties" }
    ],
    "mixinFacets": [
        { "$ref": "file.json#/facets"},
        { "$ref": "mixins.json#/facets_common" }
    ],
    "mixinAggregations": [
        { "$ref": "file.json#/aggregations"}
    ],
    "mixinColumns": [
        { "$ref": "file.json#/columns"}
    ],
    "properties": {
        "schema_version": {
            "default": "2"
        },
        "description": {
            "type": "string",
            "lookup": 20,
            "title": "Description"
        },
        "file_format": {
            "title": "File Format",
            "type": "string",
            "linkTo": "FileFormat",
            "lookup": 30,
            "ff_flag": "filter:valid_item_types"
        },
        "file_type": {
            "title": "File Type",
            "description": "The type of file based on the information in the file.",
            "type": "string",
            "lookup": 40,
            "enum": [
                "z-stack",
                "time-series"
            ]
        },
        "microscope_settings": {
            "type": "string",
            "lookup": 50,
            "title": "Microscope Settings",
            "linkTo": "MicroscopeSetting"
        },
        "related_files": {
            "exclude_from": ["submit4dn", "FFedit-create"]
        },
        "quality_metric": {
            "exclude_from": ["submit4dn", "FFedit-create"]
        },
        "dbxrefs": {
            "exclude_from": ["submit4dn", "FFedit-create"]
        },
        "attachment": {
            "title": "Additional Metadata Document",
            "description": "Document (PDF/DOC/TXT) with information about the files"
        },
        "thumbnail": {
            "type": "string",
            "title": "Thumbnail",
            "description": "link to thumbnail image",
            "exclude_from": ["submit4dn", "FFedit-create"]
        },
        "omerolink": {
            "type": "string",
            "title": "OMERO Link",
            "description": "link to Omero",
            "exclude_from": ["submit4dn", "FFedit-create"]
        },
        "imageid": {
            "type": "string",
            "title": "Image ID",
            "description": "ID of image on Omero",
            "exclude_from": ["submit4dn", "FFedit-create"]
        },
        "filename": {
            "title": "Microscopy Files (Zip/TIFF)",
            "description": "Single zipped file with microscopy files, or a single TIFF file"
        }
    },
    "file_format_file_extension": {
        "other": "",
        "zip": ".zip",
        "tiff": ".tiff",
        "ome.tiff": ".ome.tiff",
        "dv": ".dv",
        "r3d": ".r3d",
        "flex": ".flex",
        "nd2": ".nd2",
        "other": ""
    }
}
