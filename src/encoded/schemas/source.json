{
    "title": "ENCODE Source",
    "id": "/profiles/source.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for submitting biosample, antibody or other external source",
    "type": "object",
    "required": ["name", "title"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the source.",
            "default": "",
            "type": "string"
        },
        "title": {
            "title": "Name",
            "description": "The complete name of the originating lab or vendor. ",
            "type": "string"
        },
        "name": {
            "comment": "Do not submit, value is auto generated from the title as lower cased and hyphen delimited.",
            "type": "string",
            "pattern": "^[a-z0-9\\-]+$"
        },
        "url": {
            "title": "URL",
            "description": "A URL for the source.",
            "type": "string",
            "format": "uri"
        }
    }
 }
