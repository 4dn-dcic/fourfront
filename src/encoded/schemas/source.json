{
    "title": "ENCODE Source",
    "id": "http://submit.encodedcc.org/profiles/source.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for submitting biosample, antibody or other external source",
    "type": "object",
    "required": ["name"],
    "properties": {
        "submitter_email": {
            "default": "encode2@encodedcc.org",
            "description": "Email (username) of submiiter",
            "title": "Submitter Email",
            "type": "email"
        },
        "lab_name": {
            "default": "ENCODE2 Project, UCSC",
            "description": "Name of the submitting lab",
            "title": "Lab Name",
            "type": "string"
        },
        "award_name": {
            "default": "ENCODE2",
            "description": "Award (Grant) this submission is registered under",
            "title": "Award Name",
            "type": "string"
        },
        "alias": {
            "default": null,
            "description": "A short alias or lable for the source",
            "title": "Source Alias",
            "type": [
                "string",
                "null"
            ]
        },
        "name": {
            "description": "The full name of the source",
            "title": "Source or Vendor Name",
            "type": "string"
        },
        "url": {
            "default": null,
            "description": "An optional URL for the source",
            "title": "Source URL",
            "type": [
                "string",
                "null"
            ]
        }
    }
 }