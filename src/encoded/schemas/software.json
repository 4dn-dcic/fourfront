{
    "title": "Software",
    "description": "Schema for submitting analysis software.",
    "id": "/profiles/software.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["title", "software_type"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid", "alias", "name"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/attribution" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "software_type": {
            "title": "Types",
            "description": "The classification of the software",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Type",
                "type": "string",
                "enum": [
                    "docker container",
                    "aligner",
                    "aggregator",
                    "normalizer",
                    "indexer",
                    "quality metric generator",
                    "peak caller",
                    "filter",
                    "file format convertor",
                    "matrix generator",
                    "database",
                    "variant annotator",
                    "genome segmentator",
                    "qualification",
                    "assembler",
                    "other"
                ]
            }
        },
        "name": {
            "title": "Name",
            "description": "Unique name of the software package, lower cased version of title.",
            "type": "string",
            "pattern": "^[a-z0-9\\-\\_]+",
            "uniqueKey": "software:name:version"
        },
        "title": {
            "title": "Title",
            "description": "The preferred viewable name of the software.",
            "type": "string"
        },
        "version": {
            "title": "Version",
            "description": "The software version number.",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the software.",
            "type": "string"
        },
        "source_url": {
            "title": "Source URL",
            "description": "An external resource to the code base.",
            "type": "string",
            "format": "uri"
        },
        "binary_url": {
            "title": "Binary URL",
            "description": "An external resource to a compiled download of the software.",
            "type": "string",
            "format": "uri"
        },
        "documentation_url": {
            "title": "About URL",
            "description": "An external resource to addiitonal information about the software.",
            "comment": "Use of this is discouraged as documentation should be included in github repo (source_url) or binary_url",
            "type": "string",
            "format": "uri"
        },
        "purpose": {
            "title": "Purpose in project",
            "description": "The purpose that the software was used for in the project.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Purpose",
                "type": "string",
                "enum": [
                    "Hi-C",
                    "Imaging",
                    "Data QC",
                    "Visualization",
                    "Community Resource"
                ]
            }
        },
        "available_parameters": {
            "title": "Available Parameters",
            "description": "A list of parameters that can be used with the software and a short description or default value",
            "type": "array",
            "items": {
                "title": "Parameter",
                "type": {"$ref": "mixins.json#/parameter"}
            }
        },
        "software_relation": {
              "title": "Related Softwares",
              "description": "All related software",
              "type": "array",
              "items": {
                  "title": "Related Software",
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                      "relationship_type": {
                          "type": "string",
                          "description": "A controlled term specifying the type of relationship between the 'parent' software and the one listed here.",
                          "title": "Relationship Type",
                          "enum": [
                              "derived from",
                              "container for",
                              "contained in"
                          ]
                      },
                      "software": {
                      "type": "string",
                      "description": "The related software",
                      "linkTo": "Software"
                    }
                }
            }
        }
    }
}
