{
    "title": "Capture Hi-C Experiment",
    "description": "Experimental variables for a Capture Hi-C experiment.",
    "id": "/profiles/experiment_capture_c.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["experiment_type", "award", "lab", "biosample"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/dbxrefs" },
        { "$ref": "mixins.json#/documents" },
        { "$ref": "mixins.json#/library"},
        { "$ref": "mixins.json#/sop_mapping"},
        { "$ref": "experiment.json#/properties" },
        { "$ref": "experiment_hi_c.json#/properties" }
    ],
    "mixinColumns": [
        { "$ref": "experiment.json#/columns"}
    ],
    "dependencies": {
      "crosslinking_temperature": ["crosslinking_method", "crosslinking_time"],
      "crosslinking_time": ["crosslinking_method", "crosslinking_temperature"],
      "digestion_temperature": ["digestion_enzyme", "digestion_time"],
      "digestion_time": ["digestion_enzyme", "digestion_temperature"]
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "experiment_type": {
            "enum": [
            "capture Hi-C"
          ]
        },
        "rna_tag": {
            "title": "Biotinylated RNA base",
            "description": "The biotinylated base used to tag the in vitro transcribed capture RNA",
            "type": "string",
            "internal_comment": "should this be a controlled CV with enum?"
        },
        "targeted_regions": {
            "title": "Targeted Regions",
            "description": "Information about the regions targeted for capture",
            "type": "array",
            "items": {
                "description": "A region targeted for capture.",
                "title": "Target Region",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "target": {
                        "title": "Target",
                        "description": "The genes or region that is specifically targeted",
                        "type": "string",
                        "linkTo": "Target"
                    },
                    "oligo_file": {
                        "title": "Oligonucleotide Fasta File",
                        "description": "The multi fasta file that lists all the oligos used for this region",
                        "type": "string",
                        "linkTo": "File"
                    }
                }
            }
        }
    },
    "facets": {
        "award.project": {
            "title": "Project"
        },
        "biosample.biosource.individual.organism.name": {
            "title": "Organism"
        },
        "biosample.biosource.biosource_type": {
            "title": "Biosource type"
        },
        "biosample.biosource_summary": {
            "title": "Biosource"
        },
        "digestion_enzyme.name": {
            "title": "Enzyme"
        },
        "biosample.modifications_summary": {
            "title": "Modifications"
        },
        "biosample.treatments_summary": {
            "title": "Treatments"
        },
        "lab.title": {
            "title": "Lab"
        }
    },
    "columns": {
        "experiment_summary":{
            "title": "Experiment summary"
        }
    }

}
