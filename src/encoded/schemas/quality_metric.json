{
    "description": "Schema for reporting the specific calculation of an quality metrics",
    "id": "/profiles/quality_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["step_run", "files"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/standard_status"},
        { "$ref": "mixins.json#/assay" }
   ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "step_run": {
            "title": "Analysis Step",
            "description": "Reference to analysis step run in pipeline",
            "type": "string",
            "linkTo": "analysis_step_run"
        },
        "files": {
            "title": "QC Input files",
            "description": "All ENCFF files used to initiate the qc metrics",
            "type": "array",
            "items": {
                "title": "Input File",
                "type": "string",
                "linkTo": "file"
            }
        },
        "level": {
            "enum": [
                "file",
                "replicate",
                "library",
                "experiment"
            ],
            "type": "string",
            "description": "The level at which comparisons should be visualized.",
            "title": "QC level"
        },
        "sequencing coverage": {
            "type": "number",
            "description": ""
        },
        "Per base sequence quality": {
            "type": "number",
            "description": ""
        },
        "Minimum uniquely mapped reads": {
            "type": "number",
            "description": ""
        },
        "IDR": {
            "type": "number",
            "description": ""
        },
        "Per base sequence content": {
            "type": "number",
            "description": ""
        },
        "Spearman correlation": {
            "type": "number",
            "description": ""
        },
        "Basic Statistics": {
            "type": "number",
            "description": ""
        },
        "singletons": {
            "type": "number",
            "description": ""
        },
        "C methylated in CHG context": {
            "type": "number",
            "description": ""
        },
        "Kmer Content": {
            "type": "number",
            "description": ""
        },
        "SD of log ratios": {
            "type": "number",
            "description": ""
        },
        "Sequence Duplication Levels": {
            "type": "number",
            "description": ""
        },
        "NSC": {
            "type": "number",
            "description": ""
        },
        "schema_version": {
            "default": "1"
        },
        "MAD of log ratios": {
            "type": "number",
            "description": ""
        },
        "Sequence Length Distribution": {
            "type": "number",
            "description": ""
        },
        "mapped reads": {
            "type": "number",
            "description": ""
        },
        "C methylated in CHH context": {
            "type": "number",
            "description": ""
        },
        "Overrepresented sequences": {
            "type": "number",
            "description": ""
        },
        "mate mapped different chr (mapQ>=5)": {
            "type": "number",
            "description": ""
        },
        "SPOT": {
            "type": "number",
            "description": ""
        },
        "in total": {
            "type": "number",
            "description": ""
        },
        "Per sequence GC content": {
            "type": "number",
            "description": ""
        },
        "PBC": {
            "type": "number",
            "description": ""
        },
        "Adapter Content": {
            "type": "number",
            "description": ""
        },
        "Per tile sequence quality": {
            "type": "number",
            "description": ""
        },
        "read1 mapped": {
            "type": "number",
            "description": ""
        },
        "C methylated in CpG context": {
            "type": "number",
            "description": ""
        },
        "Minimum unique reads": {
            "type": "number",
            "description": ""
        },
        "read2 mapped": {
            "type": "number",
            "description": ""
        },
        "paired in sequencing": {
            "type": "number",
            "description": ""
        },
        "RSC": {
            "type": "number",
            "description": ""
        },
        "Pearson correlation": {
            "type": "number",
            "description": ""
        },
        "properly paired": {
            "type": "number",
            "description": ""
        },
        "Per base N content": {
            "type": "number",
            "description": ""
        },
        "mate mapped different chr": {
            "type": "number",
            "description": ""
        },
        "Per sequence quality scores": {
            "type": "number",
            "description": ""
        }
    }
}
