{
    "description": "Schema for reporting the 'phantumpeakqualtools run_spp.R' output as a quality metric",
    "id": "/profiles/phantumpeaktools_spp_qc_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["step_run"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "quality_metric.json#/properties" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/standard_status"},
        { "$ref": "mixins.json#/assay" }
   ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "attachment": {
            "title": "Document file metadata",
            "type": "object",
            "additionalProperties": false,
            "formInput": "file",
            "properties": {
                "download": {
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "comment": "Internal webapp URL for document file",
                    "type": "string"
                },
                "type": {
                    "title": "MIME type",
                    "type": "string",
                    "enum": [
                        "text/plain",
                    ]
                },
                "size": {
                    "title": "File size",
                    "type": "integer"
                }
            }
        },
        "ChIP data read length": {
            "type": "number",
            "description": ""
        },
        "FDR threshold": {
            "type": "number",
            "description": ""
        },
        "Minimum cross-correlation shift": {
            "type": "number",
            "description": ""
        },
        "Minimum cross-correlation value": {
            "type": "number",
            "description": ""
        },
        "Normalized Strand cross-correlation coefficient (NSC)": {
            "type": "number",
            "description": ""
        },
        "Phantom Peak Quality Tag": {
            "type": "number",
            "description": ""
        },
        "Phantom peak Correlation": {
            "type": "number",
            "description": ""
        },
        "Phantom peak location": {
            "type": "number",
            "description": ""
        },
        "Relative Strand cross-correlation Coefficient (RSC)": {
            "type": "number",
            "description": ""
        },
        "Top 3 cross-correlation values": {
            "description": "",
            "type": "array",
            "default": [],
            "items": {
                "description": "",
                "type":  "number",
            }
        },
        "Top 3 estimates for fragment length": {
            "description": "",
            "type": "array",
            "default": [],
            "items": {
                "description": "",
                "type":  "number",
            }
        },
        "Window half size": {
            "type": "number",
            "description": ""
        },
        "exclusion(max)": {
            "type": "number",
            "description": ""
        },
        "exclusion(min)": {
            "type": "number",
            "description": ""
        },
        "strandshift(max)": {
            "type": "number",
            "description": ""
        },
        "strandshift(min)": {
            "type": "number",
            "description": ""
        },
        "strandshift(step)": {
            "type": "number",
            "description": ""
        }
    }
}
