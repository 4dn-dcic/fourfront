{
    "title": "ENCODE Target",
    "id": "/profiles/target.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "version": "0.01",
    "description": "Schema for submitting a target of an antibody or experiment to the ENCODE DCC",
    "type": "object",
    "required": [ "award", "lab", "organism", "label"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema-version": {
            "description": "The version of JSON schema files used in the generation of the example",
            "comment":  "Must match the specific schemas' `version` property",
            "type": "string",
            "pattern": "^[0-9]\\.[0-9][0-9]$"
        },
        "dbxref": {
            "default": [],
            "title": "DBXREFs",
            "description": "List of Database (including HGNC or MGI)cross-references",
            "items": {
                "description": "Database identifiers",
                "title": "DB ID",
                "type":  "string"
            },
            "type": "array"
        },
        "target_aliases": {
            "default": [],
            "description": "List of target name aliases and sources, indexed for searching",
            "title": "Target aliases",
            "type": "array",
            "items": {
                "description": "Target name aliases",
                "title": "Alias",
                "type": "object",
                "properties": {
                    "source": {
                        "description": "Source of this alias",
                        "title": "Alias Source",
                        "type": "string"
                    },
                    "alias": {
                        "description": "Alias (alternate identifier) for the target",
                        "title": "Alias",
                        "type": "string"
                    }
                }
            }
        },
        "organism": {
            "description": "Organism of the specific target",
            "title": "Target organism",
            "type": "string",
            "linkTo": "organism"
        },
        "gene_name": {
            "description": "HGNC or MGI gene name for target",
            "title": "Target Gene Name",
            "type": "string",
            "format": "gene_name"
        },
        "label": {
            "description": "Short name of the target gene or modified protein.  If unmodified, the HGNC or MGI gene name",
            "title": "Target Label (Gene Name or modified protein)",
            "type": "string",
            "format": "target_label"
        }
    }
}