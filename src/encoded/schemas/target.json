{
    "title": "Target",
    "description": "Schema for submitting a targeted region of the genome, gene or set of genes.",
    "id": "/profiles/target.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["award", "lab"],
    "identifyingProperties": ["uuid", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/status"} ,
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/dbxrefs" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "description": {
            "title": "Description",
            "description": "A short description of the target",
            "type": "string"
        },
        "targeted_genes": {
            "title": "Targeted Genes",
            "description": "The genes that are specifically targeted - can also be derived from genomic region info",
            "type": "array",
            "items": {
                "title": "Gene",
                "description": "Gene symbol for targeted gene",
                "internal_comment": "will want to have validation against authority gene name databases, and link to the external resource",
                "type": "string"
            }
        },
        "targeted_region": {
            "title": "Targeted Genomic Regions",
            "description": "The genome assembly, chromosome and coordinates of the region that is targeted",
            "type": "array",
            "items": {
                "title": "Targeted Genomic Regions",
                "type": "string",
                "linkTo": "GenomicRegion"
            }
        },
        "targeted_proteins": {
            "title": "Targeted Proteins",
            "description": "Use UniProt Protein names (e.g. H31_HUMAN)",
            "type": "array",
            "items": {
                "title": "Protein",
                "description": "UniProt protein name",
                "internal_comment": "Can we validate against Uniprot?",
                "type": "string"
            }
        },
        "targeted_rnas": {
            "title": "Targeted RNAs",
            "description": "Use RefSeq identifiers (e.g. NM_003529.2)",
            "type": "array",
            "items": {
                "title": "RNA",
                "description": "Gene symbol for targeted gene",
                "internal_comment": "Can we validate against RefSeq?",
                "type": "string"
            }
        }
    }
}
