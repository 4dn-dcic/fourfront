{
    "title": "ENCODE Target",
    "id": "/profiles/target.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for submitting a target of an antibody or experiment to the ENCODE DCC",
    "type": "object",
    "required": ["organism", "label"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "dbxref": {
            "default": [],
            "title": "DBXREFs",
            "description": "List of Database (including HGNC or MGI)cross-references",
            "items": {
                "description": "Database identifiers",
                "title": "DB ID",
                "type":  "string"
            },
            "type": "array"
        },
        "organism": {
            "description": "Organism of the specific target",
            "title": "Target organism",
            "type": "string",
            "linkTo": "organism"
        },
        "gene_name": {
            "description": "HGNC or MGI gene name for target",
            "title": "Target Gene Name",
            "type": "string",
            "format": "gene_name"
        },
        "label": {
            "description": "Short name of the target gene or modified protein.  If unmodified, the HGNC or MGI gene name",
            "title": "Target Label (Gene Name or modified protein)",
            "type": "string",
            "format": "target_label"
        }
    }
}