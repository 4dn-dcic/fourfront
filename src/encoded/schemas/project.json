{
    "title": "Project",
    "description": "Schema for submitting metadata for a project.",
    "id": "/profiles/project.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "award", "lab"],
    "identifyingProperties": ["uuid", "accession" , "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/documents" },
        { "$ref": "dataset.json#/properties" },
        { "$ref": "file_set.json#/properties" }
    ],
    "properties": {
        "schema_version": {
            "default": "7"
        },
        "project_type": {
            "title": "Type",
            "description": "The category that best describes the project.",
            "type": "string",
            "enum": [
                "evaluation",
                "validation"
            ]
        }
    },
    "facets": {
        "project_type": {
            "title": "Project type",
            "type": "string"
        },
        "related_files.dataset.assay_term_name": {
            "title": "Assay",
            "type": "string"
        },
        "status": {
            "title": "Series status",
            "type": "string"
        },
        "assembly": {
            "title": "Genome assembly (visualization)",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.donor.organism.scientific_name": {
            "title": "Organism",
            "type": "string"
        },
        "related_files.dataset.target.investigated_as": {
            "title": "Target of assay",
            "type": "string"
        },
        "related_files.dataset.biosample_type": {
            "title": "Biosample type",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.organ_slims": {
            "title": "Organ",
            "type": "array"
        },
        "related_files.dataset.replicates.library.biosample.life_stage": {
            "title": "Life stage",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.treatments.treatment_term_name": {
            "title": "Biosample treatment",
            "type": "string"
        },
        "related_files.analysis_step_version.analysis_step.pipelines.title": {
            "title": "Pipeline",
            "type": "string"
        },
        "related_files.file_type": {
            "title": "Available data",
            "type": "string"
        },
        "related_files.run_type": {
            "title": "Run type",
            "type": "string"
        },
        "related_files.read_length": {
            "title": "Read length",
            "type": "string"
        },
        "related_files.dataset.replicates.library.size_range": {
            "title": "Library insert size (nt)",
            "type": "string"
        },
        "related_files.dataset.replicates.library.nucleic_acid_term_name": {
            "title": "Library made from",
            "type": "string"
        },
        "related_files.dataset.replicates.library.depleted_in_term_name": {
            "title": "Library depleted in",
            "type": "string"
        },
        "related_files.dataset.replicates.library.treatments.treatment_term_name": {
            "title": "Library treatment",
            "type": "array"
        },
        "month_released": {
            "title": "Date released",
            "type": "string"
        },
        "lab.title": {
            "title": "Lab",
            "type": "string"
        },
        "award.project": {
            "title": "Project",
            "type": "string"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession",
            "type": "string"
        },
        "related_files.dataset.assay_term_name": {
            "title": "Assay Type",
            "type": "string"
        },
        "related_files.dataset.target.label":{
            "title": "Target",
            "type": "string"
        },
        "related_files.dataset.biosample_term_name": {
            "title": "Biosample",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "type": "string"
        },
        "lab.title": {
            "title": "Lab",
            "type": "string"
        },
        "award.project": {
            "title": "Project",
            "type": "string"
        },
        "status": {
            "title": "Status",
            "type": "string"
        },
         "related_files.dataset.replicates.antibody.accession": {
            "title": "Linked Antibody",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.organism.scientific_name": {
            "title": "Species",
            "type": "array"
        },
        "related_files.dataset.replicates.library.biosample.life_stage": {
            "title": "Life stage",
            "type": "array"
        },
        "related_files.dataset.replicates.library.biosample.age": {
            "title": "Age",
            "type": "array"
        },
        "related_files.dataset.replicates.library.biosample.age_units": {
            "title": "Age Units",
            "type": "array"
        },
        "related_files.dataset.replicates.library.biosample.treatments.treatment_term_name": {
            "title": "Treatment",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.treatments.treatment_term_id": {
            "title": "Term ID",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.treatments.concentration": {
            "title": "Concentration",
            "type": "number"
        },
        "related_files.dataset.replicates.library.biosample.treatments.concentration_units": {
            "title": "Concentration units",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.treatments.duration": {
            "title": "Duration",
            "type": "number"
        },
        "related_files.dataset.replicates.library.biosample.treatments.duration_units": {
            "title": "Duration units",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.synchronization": {
            "title": "Synchronization",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.post_synchronization_time": {
            "title": "Post-synchronization time",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.post_synchronization_time_units": {
            "title": "Post-synchronization time units",
            "type": "string"
        },
        "related_files.dataset.replicates.length": {
            "title": "Datasets",
            "type": "array"
        },
        "related_files.length": {
            "title": "Files",
            "type": "array"
        },
        "encode2_dbxrefs": {
            "title": "Dbxrefs",
            "type": "array"
        }
    },
    "boost_values": {
        "accession": 1.0,
        "alternate_accessions": 1.0,
        "dbxrefs": 1.0,
        "aliases": 1.0,
        "award.title": 1.0,
        "award.project": 1.0,
        "submitted_by.email": 1.0,
        "submitted_by.first_name": 1.0,
        "submitted_by.last_name": 1.0,
        "lab.institute_name": 1.0,
        "lab.institute_label": 1.0,
        "lab.title": 1.0
    }
}