{
    "title": "Annotation",
    "description": "Schema for submitting metadata for an annotation set.",
    "id": "/profiles/annotation.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "award", "lab"],
    "identifyingProperties": ["uuid", "accession" , "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/documents" },
        { "$ref": "mixins.json#/biosample_classification" },
        { "$ref": "dataset.json#/properties" },
        { "$ref": "file_set.json#/properties" }
    ],
    "dependencies": {
        "relevant_timepoint": ["relevant_timepoint_units"],
        "relevant_timepoint_units": ["relevant_timepoint"]
    },
    "properties": {
        "schema_version": {
            "default": "7"
        },
        "annotation_type": {
            "title": "Type",
            "description": "The category that best describes the annotation set.",
            "type": "string",
            "enum": [
                "enhancer prediction",
                "segmentation",
                "overlap",
                "encyclopedia"
            ]
        },
        "organism": {
            "title": "Organism",
            "comment": "See organism.json for available identifiers.",
            "type": "string",
            "linkTo": "Organism"
        },
        "relevant_timepoint": {
            "title": "Relevant timepoint",
            "description": " The timepoint for which the annotation is relevant.",
            "type": "string",
            "pattern": "^((\\d+(\\.\\d+)?(\\-\\d+(\\.\\d+)?)?)|(unknown))$"
        },
        "relevant_timepoint_units": {
            "title": "Relevant timepoint unit",
            "type": "string",
            "enum": [
                "minute",
                "hour",
                "day",
                "week",
                "month",
                "year",
                "stage"
            ]
        },
        "relevant_life_stage": {
            "title": "life stage",
            "description": "The life_stage for which the annotation is relevant.",
            "comment": "Note that some of the options are organism-specific so choose carefully.",
            "type": "string",
            "enum": [
                "adult",
                "unknown",
                "embryonic",
                "postnatal",
                "larva",
                "first instar larva",
                "second instar larva",
                "third instar larva",
                "wandering third instar larva",
                "prepupa",
                "pupa",
                "early embryonic",
                "midembryonic",
                "late embryonic",
                "mixed stage (embryonic)",
                "mixed stage (late embryonic and L1 larva)",
                "L1 larva",
                "L2 larva",
                "L2d larva",
                "L3 larva",
                "L4 larva",
                "dauer",
                "L4/young adult",
                "young adult"
            ]
        },
        "target": {
            "title": "Target",
            "description": "For predictions of particular features (e.g. distribution of a histone mark), specify the predicted feature.",
            "comment": "See target.json for available identifiers.",
            "type": "string",
            "linkTo": "Target"
        },
        "software_used": {
            "title": "Software used",
            "description": "A list of software used to derive the annotation calls.",
            "type": "array",
            "items": {
                "title": "Software used",
                "description": "Version of software used to derived the annotation calls.",
                "type": "string",
                "comment": "See software_version.json for available identifiers.",
                "linkTo": "SoftwareVersion"
            }
        }
    },
    "facets": {
        "annotation_type": {
            "title": "Annotation type",
            "type": "string"
        },
        "related_files.dataset.assay_term_name": {
            "title": "Assay",
            "type": "string"
        },
        "status": {
            "title": "Series status",
            "type": "string"
        },
        "assembly": {
            "title": "Genome assembly (visualization)",
            "type": "string"
        },
        "organism.scientific_name": {
            "title": "Organism",
            "type": "string"
        },
        "target.investigated_as": {
            "title": "Target of assay",
            "type": "string"
        },
        "biosample_type": {
            "title": "Biosample type",
            "type": "string"
        },
        "organ_slims": {
            "title": "Organ",
            "type": "array"
        },
        "relevant_life_stage": {
            "title": "Life stage",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.treatments.treatment_term_name": {
            "title": "Biosample treatment",
            "type": "string"
        },
        "related_files.analysis_step_version.analysis_step.pipelines.title": {
            "title": "Pipeline",
            "type": "string"
        },
        "related_files.file_type": {
            "title": "Available data",
            "type": "string"
        },
        "related_files.run_type": {
            "title": "Run type",
            "type": "string"
        },
        "related_files.read_length": {
            "title": "Read length",
            "type": "string"
        },
        "related_files.dataset.replicates.library.size_range": {
            "title": "Library insert size (nt)",
            "type": "string"
        },
        "related_files.dataset.replicates.library.nucleic_acid_term_name": {
            "title": "Library made from",
            "type": "string"
        },
        "related_files.dataset.replicates.library.depleted_in_term_name": {
            "title": "Library depleted in",
            "type": "string"
        },
        "related_files.dataset.replicates.library.treatments.treatment_term_name": {
            "title": "Library treatment",
            "type": "array"
        },
        "month_released": {
            "title": "Date released",
            "type": "string"
        },
        "lab.title": {
            "title": "Lab",
            "type": "string"
        },
        "award.project": {
            "title": "Project",
            "type": "string"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession",
            "type": "string"
        },
        "related_files.dataset.assay_term_name": {
            "title": "Assay Type",
            "type": "string"
        },
        "related_files.dataset.target.label":{
            "title": "Target",
            "type": "string"
        },
        "related_files.dataset.biosample_term_name": {
            "title": "Biosample",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "type": "string"
        },
        "lab.title": {
            "title": "Lab",
            "type": "string"
        },
        "award.project": {
            "title": "Project",
            "type": "string"
        },
        "status": {
            "title": "Status",
            "type": "string"
        },
         "related_files.dataset.replicates.antibody.accession": {
            "title": "Linked Antibody",
            "type": "string"
        },
        "organism.scientific_name": {
            "title": "Species",
            "type": "array"
        },
        "relevant_life_stage": {
            "title": "Life stage",
            "type": "array"
        },
        "related_files.dataset.replicates.library.biosample.age": {
            "title": "Age",
            "type": "array"
        },
        "related_files.dataset.replicates.library.biosample.age_units": {
            "title": "Age Units",
            "type": "array"
        },
        "related_files.dataset.replicates.library.biosample.treatments.treatment_term_name": {
            "title": "Treatment",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.treatments.treatment_term_id": {
            "title": "Term ID",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.treatments.concentration": {
            "title": "Concentration",
            "type": "number"
        },
        "related_files.dataset.replicates.library.biosample.treatments.concentration_units": {
            "title": "Concentration units",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.treatments.duration": {
            "title": "Duration",
            "type": "number"
        },
        "related_files.dataset.replicates.library.biosample.treatments.duration_units": {
            "title": "Duration units",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.synchronization": {
            "title": "Synchronization",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.post_synchronization_time": {
            "title": "Post-synchronization time",
            "type": "string"
        },
        "related_files.dataset.replicates.library.biosample.post_synchronization_time_units": {
            "title": "Post-synchronization time units",
            "type": "string"
        },
        "related_files.dataset.replicates.length": {
            "title": "Datasets",
            "type": "array"
        },
        "related_files.length": {
            "title": "Files",
            "type": "array"
        },
        "encode2_dbxrefs": {
            "title": "Dbxrefs",
            "type": "array"
        }
    },
    "boost_values": {
        "accession": 1.0,
        "alternate_accessions": 1.0,
        "dbxrefs": 1.0,
        "aliases": 1.0,
        "biosample_term_id": 1.0,
        "biosample_term_name": 1.0,
        "biosample_type": 1.0,
        "organ_slims": 1.0,
        "developmental_slims": 1.0,
        "biosample_synonyms": 1.0,
        "award.title": 1.0,
        "award.project": 1.0,
        "submitted_by.email": 1.0,
        "submitted_by.first_name": 1.0,
        "submitted_by.last_name": 1.0,
        "lab.institute_name": 1.0,
        "lab.institute_label": 1.0,
        "lab.title": 1.0
    }
}