
{
    "title": "Annotation",
    "description": "Schema for submitting metadata for an annotation set.",
    "id": "/profiles/annotation.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "award", "lab"],
    "identifyingProperties": ["uuid", "accession" , "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/biosample_classification" },
        { "$ref": "dataset.json#/properties" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "annotation_type": {
            "title": "Type",
            "description": "The category that best describes the annotation set.",
            "type": "string",
            "default": "prediction",
            "enum": [
                "enhancer prediction",
                "segmentation",
                "overlap",
                "encyclopedia"
            ]
        },
        "relevant_timepoint": {
            "title": "Relevant timepoint",
            "description": " The timepoint for which the annotation is relevant.",
            "type": "string",
            "pattern": "^((\\d+(\\.\\d+)?(\\-\\d+(\\.\\d+)?)?)|(unknown))$"
        },
        "relevant_timepoint_units": {
            "title": "Relevant timepoint unit",
            "type": "string",
            "enum": [
                "minute",
                "hour",
                "day",
                "week",
                "month",
                "year",
                "stage"
            ]
        },
        "relevant_life_stage": {
            "title": "life stage",
            "type": "string",
            "enum": [
                "adult",
                "unknown",
                "embryonic",
                "postnatal",
                "larva",
                "first instar larva",
                "second instar larva",
                "third instar larva",
                "wandering third instar larva",
                "prepupa",
                "pupa",
                "early embryonic",
                "midembryonic",
                "late embryonic",
                "mixed stage (embryonic)",
                "mixed stage (late embryonic and L1 larva)",
                "L1 larva",
                "L2 larva",
                "L2d larva",
                "L3 larva",
                "L4 larva",
                "dauer",
                "L4/young adult",
                "young adult"
            ]
        },
        "target": {
            "title": "Target",
            "description": "For assays, such as ChIP-seq or RIP-seq, the name of the gene whose expression or product is under investigation for the experiment.",
            "comment": "See target.json for available identifiers.",
            "type": "string",
            "linkTo": "Target"
        },
        "software_used": {
            "title": "Software used",
            "description": "A list of software used to derive the annotation calls.",
            "type": "array",
            "items": {
                "title": "Software used",
                "description": "Version of software used to derived the annotation calls.",
                "type": "string",
                "comment": "See software_version.json for available identifiers.",
                "linkTo": "SoftwareVersion"
            }
        }
    },
    "facets": {
        "lab.title": {
            "title": "Lab",
            "type": "string"
        },
        "annotation_type": {
            "title": "Annotation type",
            "type": "string"
        },
        "organ_slims": {
            "title": "Organ",
            "type": "array"
        },
        "software_used.software.software_type": {
            "title": "Software type used",
            "type": "array"
        },
        "files.file_type": {
            "title": "Available data",
            "type": "string"
        },
        "status": {
            "title": "Experiment status",
            "type": "string"
        },
        "award.project": {
            "title": "Project",
            "type": "string"
        }
    },
    "columns": {
        "accession": {
            "title": "Accession",
            "type": "string"
        },
        "annotation_type": {
            "title": "Annotation type",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "type": "string"
        },
        "software_used.software.software_type": {
            "title": "Software type used",
            "type": "array"
        },
        "biosample_term_name": {
            "title": "Biosample",
            "type": "string"
        },
        "lab.title": {
            "title": "Lab",
            "type": "string"
        },
        "status": {
            "title": "Status",
            "type": "string"
        },
        "award.project": {
            "title": "Project",
            "type": "string"
        }
    },
    "boost_values": {
        "accession": 1.0,
        "alternate_accessions": 1.0,
        "aliases": 1.3,
        "annotation_type": 1.0,
        "description": 1.0,
        "dbxrefs": 1.0,
        "award.title": 1.0,
        "award.project": 1.0,
        "organ_slims": 1.0,
        "developmental_slims": 1.0,
        "assay_synonyms": 1.0,
        "biosample_synonyms": 1.0,
        "submitted_by.email": 1.0,
        "submitted_by.first_name": 1.0,
        "submitted_by.last_name": 1.0,
        "lab.institute_name": 1.1,
        "lab.institute_label": 1.0,
        "lab.title": 1.0,
        "files.accession": 1.0,
        "files.alternate_accessions": 1.0,
        "files.file_format": 1.0,
        "files.output_type": 1.0,
        "files.md5sum": 1.0,
        "references.title": 1.0
    }
}
