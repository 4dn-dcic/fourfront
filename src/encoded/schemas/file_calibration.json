{
    "title": "Imaging Files for Calibration",
    "description": "Schema for submitting metadata for a Calibration File.",
    "id": "/profiles/file_calibration.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["award", "lab"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/dbxrefs" },
        { "$ref": "mixins.json#/attachment" },
        { "$ref": "file.json#/properties" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "description": {
            "type": "string",
            "title": "Description"
        },
        "file_format": {
            "title": "File format",
            "type": "string",
            "default": "other",
            "exclude_from": "submit4dn",
            "enum": [
                "other"
            ]
        },
        "file_type": {
            "title": "File type",
            "description": "The type of file based on the information in the file.",
            "default": "calibration file",
            "exclude_from": "submit4dn",
            "enum": [
                "calibration file"
            ]
        },
        "file_classification": {
            "title": "General Classification",
            "type": "string",
            "default": "Microscopy",
            "exclude_from": "submit4dn",
            "enum": [
                "Microscopy"
              ]
        },
        "related_files": {
            "exclude_from": "submit4dn"
        }
    },
    "file_format_file_extension": {
        "other": ""
    }
}
