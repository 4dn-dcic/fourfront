{
    "title": "ENCODE biosample Treatment",
    "id": "/profiles/treatment.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "version": "0.01",
    "description": "Schema for submitting an ENCODE biosample Treatment",
    "type": "object",
    "required": [ "title", "type", "lab", "award"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema-version": {
            "description": "The version of JSON schema files used in the generation of the example",
            "comment":  "Must match the specific schemas' `version` property",
            "type": "string",
            "pattern": "^[0-9]\\.[0-9][0-9]$"
        },
        "name": {
            "description": "Unique short name for the Treatment",
            "title": "Treatment name",
            "type": "string",
            "pattern": "^[a-z0-9\\-]+$"
        },
        "title": {
            "description": "The preferred viewable name of the software",
            "title": "Treatment title",
            "type": "string"
        },
        "type": {
            "default": "chemical",
            "description": "The type of biosample treatment",
            "title": "Treatment Type",
            "type": "string",
            "enum": [
                "protein",
                "chemical",
                "infection"
            ]
        },
        "protocols": {
            "default": [],
            "description": "Treatment protocol document",
            "comment": "For automatic submission supply an unique document name or UUID",
            "title": "Treatment Protocol Documents",
            "type": "array",
            "items": {
                "type": "string",
                "linkTo": "document"
            }
        },
        "encode2_dbxrefs": {
            "default": [],
            "description": "List cross-references to the previous ENCODE2 system",
            "items": {
                "description": "List of ENCODE2 Identifiers",
                "title": "ID",
                "type":  "string"
            },
            "title": "ENCODE2 DBXREFs",
            "type": "array"
        },
        "term_id": {
            "description": "ChEBI Ontology term ID describing chemical used in treatment",
            "comment": "For chemical treatments only",
            "title": "ChEBI ID",
            "type": "string",
            "pattern": "^(CHEBI:[0-9]{5,6})|(UniprotKB:P[0-9]{5})|(Taxon:[0-9]{6})$"
        },
        "term_name": {
            "description": "ChEBI ontology term describing chemical treatment",
            "comment": "For chemical treatments only",
            "title": "ChEBI Term (Chemical Name)",
            "type":  "string"
        },
        "concentration": {
            "description": "Concentration of chemical treament (numeric)",
            "comment": "For chemical treatments only",
            "title": "Concentration",
            "type": "number"
        },
        "concentration_units": {
            "description": "Concentration units for chemical treament",
            "comment": "For chemical treatments only",
            "title": "Conc. units",
            "type": "string",
            "enum": [
                "pM",
                "nM",
                "Î¼M",
                "mM",
                "percent"
            ]
        },
        "duration": {
            "description": "Duration of chemical treament (numeric)",
            "comment": "For chemical treatments only",
            "title": "Duration",
            "type": "number"
        },
        "duration_units": {
            "description": "Duration units for chemical treament",
            "comment": "For chemical treatments only",
            "title": "Duration units",
            "type": "string",
            "enum": [
                "second",
                "minute",
                "hour",
                "day"
            ]
        }
    }
}