{
    "title": "SOPs with fields",
    "description": "For items with SOPs stores a mapping of the fields and the default values for that SOP.",
    "id": "/profiles/sop_map.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "identifyingProperties": ["uuid", "aliases", "sop_name"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/documents" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/status" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "sop_name": {
            "title": "SOP",
            "description": "Name of the SOP.",
            "type": "string"
        },
        "sop_version": {
            "title": "Version",
            "description": "Version of the SOP",
            "type": "number",
            "default": 1
        },
        "description": {
            "title": "Description",
            "description": "A short description of the SOP and what it's used for.",
            "type": "string"
        },
        "sop_protocol": {
            "title": "Protocol Document",
            "description": "A document describing the SOP",
            "type": "string",
            "linkTo": "Protocol"
        },
        "fields_in_sop": {
            "title": "SOP fields",
            "description": "The data fields that have SOP defaults",
            "type": "array",
            "items": {
                "title": "Field Info",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "field_name": {
                        "title": "Field name",
                        "description": "the name of the field",
                        "type": "string"
                    },
                    "field_value": {
                        "title": "Value",
                        "description": "a specified value for the specified parameter",
                        "type": "string"
                    }
                }
            }
        }
    }
}
