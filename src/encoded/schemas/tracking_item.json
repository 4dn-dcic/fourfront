{
    "title": "TrackingItem",
    "description": "Schema for internal tracking of Fourfront events, such as downloads",
    "id": "/profiles/tracking_item.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["tracking_type"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": true,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/status" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "status": {
            "default": "in review by lab"
        },
        "tracking_type": {
            "title": "Tracking Type",
            "type": "string",
            "description": "What this item tracks. Defaults to file_download",
            "default": "file_download",
            "enum" : [
                "file_download"
            ]
		}
    }
}
