{
    "title": "TrackingItem",
    "description": "Schema for internal tracking of Fourfront events, such as downloads",
    "id": "/profiles/tracking_item.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["tracking_type"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/status" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "status": {
            "default": "in review by lab"
        },
        "tracking_type": {
            "title": "Tracking Type",
            "type": "string",
            "description": "What this item tracks. Defaults to other",
            "default": "other",
            "enum" : [
                "other",
                "file_download"
            ]
		},
        "download_tracking": {
            "title": "Download Tracking",
            "type": "object",
            "description": "Subobject to hold download tracking field. Allows additional properties",
            "additionalProperties": true,
            "properties": {
                "user_agent" : {
                    "title": "User Agent",
                    "type": "string"
                },
                "remote_ip" : {
                    "title": "Remote IP",
                    "type": "string"
                },
                "user_email" : {
                    "title": "User Email",
                    "type": "string"
                },
                "request_path" : {
                    "title": "User Agent",
                    "type": "string"
                },
                "filename" : {
                    "title": "Filename",
                    "type": "string"
                },
                "range_query" : {
                    "title": "Range Query",
                    "type": "boolean"
                }
            }
        },
        "other_tracking": {
            "title": "Other Tracking",
            "type": "object",
            "description": "Subobject to misc. tracking fields. Allows additional properties",
            "additionalProperties": true,
            "properties": {}
        }
    }
}
