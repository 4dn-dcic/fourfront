{
    "title": "Individual",
    "id": "/profiles/individual.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["life_status", "sex"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": true,
    "mixinProperties": [
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/modified" }
    ],
    "properties": {
        "accession" : {
            "accessionType" : "ID"
        },
        "sex": {
            "title": "Sex",
            "type": "string",
            "enum": [
                "male",
                "female",
                "other",
                "unknown"
            ]
        },
        "diseases" : {
            "title" : "Diseases",
            "type" : "array",
            "uniqueItems": true,
            "items" : {
                "title" : "Disease",
                "type" : "string",
                "linkTo" : "Disease"
            }
        },
        "birth_year" : {
            "title" : "Year of Birth",
            "type" : "integer"
        },
        "life_status": {
            "title": "Life Status",
            "type": "string",
            "enum": [
                "alive",
                "deceased"
            ]
        },
        "ethnicity": {
            "title": "Ethnicity",
            "type": "string",
            "enum": [
                "asian",
                "black",
                "hispanic",
                "indian",
                "middle_eastern",
                "native_american",
                "pacific_islander",
                "white",
                "other"
            ]
        },
        "bgm_id": {
            "title": "BGM Identifier",
            "type": "string",
            "uniqueKey": true
        },
        "other_id": {
            "description": "Non-BGM Identifier",
            "type": "object",
            "required": ["id", "id_source"],
            "properties": {
                "id": {
                    "title": "Identifier",
                    "type": "string",
                    "uniqueKey": true
                },
                "id_source": {
                    "title": "Source of Identifier",
                    "type": "string"
                }
            }
        },
        "clinical_indication": {
            "title": "Clinical Indication",
            "description": "Clinical indication for referral",
            "type": "string",
            "formInput": "textarea"
        },
        "age_of_onset": {
            "title": "Age of Onset",
            "type": "string",
            "enum": [
                "unknown",
                "congenital onset",
                "embryonal onset",
                "fetal onset",
                "neonatal onset",
                "infantile onset",
                "childhood onset",
                "juvenile onset",
                "adult onset"
            ]
        },
        "related_individuals": {
            "title": "Related Individuals",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Related Individual",
                "type": "object",
                "required": ["related_individual", "relationship_type"],
                "properties": {
                    "related_individual": {
                        "title": "Individual",
                        "type": "string",
                        "linkTo": "Individual"
                    },
                    "relationship_type": {
                        "title": "Relationship Type",
                        "type": "string",
                        "enum": [
                            "parent",
                            "child"
                        ]
                    }
                }
            }
        }
    }
}
