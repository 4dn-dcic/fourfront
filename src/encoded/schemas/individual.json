{
    "title": "Individual",
    "description": "DEL REF Base schema for individuals.",
    "id": "/profiles/individual.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "award", "lab", "organism"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/accessioned_status" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/documents" },
        { "$ref": "mixins.json#/notes" }
    ],
    "dependencies": {
      "age": [ "age_units"]
    },
    "properties": {
        "accession": {
            "accessionType": "DO"
        },
        "organism": {
            "title": "Organism",
            "description": "Organism of the individual.",
            "comment": "Do not submit, value is assigned by the object.",
            "type": "string",
            "linkTo": "Organism"
        },
        "age": {
            "title": "Donor age",
            "description": " The age or age range of the donor when biological material was sampled.",
            "type": "number"
        },
        "age_units": {
            "title": "Donor age units",
            "type": "string",
            "enum": [
                "day",
                "week",
                "month",
                "year"
            ]
        },
        "sex": {
            "title": "Sex",
            "type": "string",
            "default": "unknown",
            "enum": [
                "male",
                "female",
                "unknown",
                "mixed"
            ]
        },
        "url": {
            "title": "URL",
            "description": "An external resource with additional information about the individual.",
            "type": "string",
            "format": "uri"
        }
    }
}
