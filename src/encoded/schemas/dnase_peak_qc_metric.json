{
    "description": "Schema for reporting hotspot and peak counts as a quality metric",
    "id": "/profiles/dnase_peak_qc_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["step_run","applies_to"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "quality_metric.json#/properties" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/standard_status"},
        { "$ref": "mixins.json#/assay" }
   ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "attachment": {
            "title": "Document file metadata",
            "type": "object",
            "additionalProperties": false,
            "formInput": "file",
            "properties": {
                "download": {
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "comment": "Internal webapp URL for document file",
                    "type": "string"
                },
                "type": {
                    "title": "MIME type",
                    "type": "string",
                    "enum": [
                        "text/plain",
                    ]
                },
                "size": {
                    "title": "File size",
                    "type": "integer"
                }
            }
        },
        "hotspot count": {
            "type": "number",
            "description": ""
        },
        "peak count": {
            "type": "number",
            "description": ""
        }
    }
}
