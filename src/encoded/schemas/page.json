{
    "title": "Page",
    "id": "/profiles/page.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "required": [],
    "additionalProperties": false,
    "identifyingProperties": ["uuid", "aliases"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "type": "object",
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "status": {
            "title": "Status",
            "type": "string",
            "default": "current",
            "enum" : [
                "released",
                "draft",
				"deleted"
            ]
        },
		"source_uri": {
				"Title": "URI of source file",
				"type": "string"
		},
        "title": {
            "title": "Title",
            "comment": "Title for the Page",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "type": "string",
            "default": ""
        },
        "notification": {
            "title": "Notification",
            "type": "string",
            "default": ""
        },
		"toc": {
			"title": "Table of Contents",
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"header-depth": {
						"title": "Header Depth",
						"description": "depth of header object",
						"type": "integer" 
				},
				"skip-depth" : {
						"title": "Skip Depth",
						"description": "skip depth",
					    "type": "string"	
				},
				"enabled" : {
						"title": "Enabled",
						"description": "Enable the table of contents or not",
						"type": "boolean",
						"default": false
				},
				"list-styles": {
						"title": "List Styles",
						"description": "Styles used for list",
						"type": "array",
						"items": {
						   "type": "string"
						}
				}, 
				"enclude-top-link" : {
						"title": "Include toplink",
						"description": "Show links on top of page",
						"type": "boolean",
						"default": false
				}
		}
    }
  }
}
