{
    "title": "Visualization Track File",
    "description": "Files used as visualization tracks in HiGlass.",
    "id": "/profiles/file_vistrack.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["file_format", "award", "lab"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/release_dates" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/dbxrefs" },
        { "$ref": "mixins.json#/tags" },
        { "$ref": "mixins.json#/static_headers" },
        { "$ref": "file.json#/properties" }
    ],
    "mixinFacets": [
        { "$ref": "file.json#/facets"},
        { "$ref": "mixins.json#/facets_common" }
    ],
    "mixinColumns": [
        { "$ref": "file.json#/columns"}
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "higlass_uid": {
            "title": "Higlass UID",
            "type": "string"
        },
        "file_format": {
            "title": "File Format",
            "type": "string",
            "linkTo": "FileFormat",
            "ff_flag": "filter:valid_item_types"
        },
        "file_type": {
            "title": "File Type",
            "description": "The type of file based on the information in the file.",
            "enum": [
                "genome reference",
                "genome index",
                "index",
                "barcodes",
                "oligo sequences",
                "restriction sites",
                "blacklisted regions",
                "repeats",
                "spike-in",
                "other"
            ]
        },
        "file_classification": {
            "title": "General Classification",
            "type": "string",
            "default": "visualization",
            "exclude_from": ["submit4dn", "FFedit-create"],
            "enum": ["visualization"]
        },
        "genome_assembly": {
            "title": "Genome Assembly",
            "description": "The genome assembly associated with the file - for processing or reference",
            "type": "string",
            "lookup": 30,
            "enum": [
                "GRCh38",
                "GRCm38",
                "dm6",
                "galGal5"
            ]
        },
        "biosource": {
            "title": "Biosource",
            "description": "The cell line or tissue sample for this track",
            "type": "string",
            "linkTo": "Biosource",
            "lookup": 22
        },
        "external_file_accession": {
            "title": "External Accession",
            "description": "The primary accession for this file from the external source",
            "@type": "@id",
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "comment": "Enter as a database name:identifier eg. ENC:ENCFF252ZFN",
            "type": "string"
        },
        "external_experiment_accession": {
            "title": "External Experiment Accession",
            "description": "The accession for the Experiment or Dataset that this file is linked to",
            "@type": "@id",
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "comment": "Enter as a database name:identifier eg. ENC:ENCSR301HRV",
            "type": "string"
        },
        "experiment_description": {
            "title": "Experiment Description",
            "description": "A description of the Experiment or Dataset from whence this file.",
            "type": "string",
            "lookup": 10,
            "formInput": "textarea"
        }
    }
}
