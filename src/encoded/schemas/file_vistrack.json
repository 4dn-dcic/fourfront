{
    "title": "Visualization Track File",
    "description": "Files used as visualization tracks in HiGlass.",
    "id": "/profiles/file_vistrack.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["file_format", "award", "lab"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/release_dates" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/dbxrefs" },
        { "$ref": "mixins.json#/tags" },
        { "$ref": "mixins.json#/static_headers" },
        { "$ref": "file.json#/properties" }
    ],
    "mixinFacets": [
        { "$ref": "mixins.json#/facets_common" }
    ],
    "mixinColumns": [],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "higlass_uid": {
            "title": "Higlass UID",
            "type": "string"
        },
        "file_type": {
            "title": "File Type",
            "description": "The type of file based on the information in the file.",
            "enum": [
                "intensity values",
                "peaks",
                "fold change over control"
            ]
        },
        "file_classification": {
            "title": "General Classification",
            "type": "string",
            "default": "visualization",
            "exclude_from": ["submit4dn", "FFedit-create"],
            "enum": ["visualization"]
        },
        "genome_assembly": {
            "title": "Genome Assembly",
            "description": "The genome assembly associated with the file - for processing or reference",
            "type": "string",
            "enum": [
                "GRCh38",
                "GRCm38",
                "dm6",
                "galGal5"
            ]
        },
        "biosource": {
            "title": "Biosource",
            "description": "The cell line or tissue sample for this track",
            "type": "string",
            "linkTo": "Biosource"
        },
        "dataset_description": {
            "title": "Dataset Description",
            "description": "A description of the Experiment or Dataset from whence this file.",
            "type": "string",
            "formInput": "textarea"
        },
        "dataset_type": {
            "title": "Dataset Type",
            "description": "The type of dataset to which this file is associated",
            "type": "string"
        },
        "assay_info": {
            "title": "Assay details",
            "description": "Information that helps distinguish the assay eg. ChIP-seq target or repliseq phase",
            "type": "string"
        },
        "replicate_identifiers": {
            "title": "Replicates",
            "type": "array",
            "items": {
                "title": "Replicate Info",
                "description": "Replicate identifiers that this file is associated with",
                "type": "string"
            }
        },
        "project_lab": {
            "title": "Wet Lab",
            "description": "The lab that did the experiment from whence this file",
            "type": "string"
        },
        "project_release_date": {
            "title": "Project Dataset Release Date",
            "description": "The date that the dataset associated with this file was first released by the project",
            "type": "string",
            "format": "date"
        }
    },
    "facets": {
        "file_type" : {
            "title" : "File Type",
            "descripton" : "Type or categorization of this file."
        },
        "file_format.file_format": {
            "title" : "File Format",
            "description" : "Format of the file."
        },
        "biosource.display_title": {
            "title": "Cell Line"
        },
        "project_lab": {
            "title": "Generating lab",
            "description": "The lab that did the experiment"
        }
    },
    "columns": {
        "file_type" : {
            "title" : "File Type"
        },
        "file_format": {
            "title" : "File Format"
        },
        "biosource.display_title": {
            "title": "Biosource"
        },
        "file_size" : {
            "title" : "File Size"
        },
        "project_release_date": {
            "title": "Dataset Release"
        }
    }
}
