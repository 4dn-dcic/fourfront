{
    "title": "Biosample",
    "description": "Schema for submitting a biosample.",
    "id": "/profiles/biosample.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "biosource"],
    "identifyingProperties": ["uuid","accession","aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "BS"
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the biosample. Do not include experiment details, constructs or treatments.",
            "type": "string",
            "default": ""
        },
        "biosource": {
          "title": "Biosources",
          "description": "The cell lines or tissue types used in the experiment",
          "comment": "See biosource.json for available identifiers?",
          "type": "array",
          "default":[],
          "uniqueItems": true,
          "items": {
              "title": "Biosource",
              "comment": "use accessions",
              "type": "string",
              "linkTo": "Biosource"
          }
        },
        "biosample_protocols": {
            "title": "Biosample Protocols",
            "description": "Information about biosample preparation protocols.",
            "type": "array",
            "items": {
                "title": "Protocols",
                "description": "Specific information for specific types of protocols",
                "type": "string",
                "comment": "eg. can have cell culture protocol info",
                "linkTo": "Protocol"
            }
        },
        "modifications": {
            "title": "Stable genomic modifications",
            "description": "Expression or targeting vectors stably transfected to generate Crispr'ed or other genomic modification",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Modifications",
                "description": "A single genomic modification of the biosample.",
                "type":  "string",
                "linkTo": "Modification"
            }
        },
        "treatments": {
            "title": "Treatments",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Treatment",
                "type": "string",
                "linkTo": "Treatment"
            }
        },
        "biosample_relation": {
            "title": "Biosample relations",
            "description": "Related biosamples",
            "type": "array",
            "items": {
                "title": "Biosample relation",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "relationship_type": {
                        "type": "string",
                        "description": "A controlled term specifying the relationship between biosamples.",
                        "title": "Relationship Type",
                        "comment": "if you want the relationship to be updated on the other end, modify biosample.py",
                        "enum": [
                            "derived from",
                            "parent of"
                        ]
                    },
                    "biosample": {
                      "type": "string",
                      "description": "The related biosample",
                      "linkTo": "Biosample"
                    }
                }
            }
        }
    },
    "facets": {
        "biosource.biosource_type": {
            "title": "Biosource type"
        },
        "biosource.biosource_name": {
            "title": "Biosource"
        },
        "biosource.individual.organism.name": {
            "title": "Organism"
        },
        "modifications.modification_name": {
            "title": "Modification"
        },
        "treatments.treatment_type": {
            "title": "Treatment"
        }
    },
    "columns": {
        "biosource.biosource_type": {
            "title": "Biosource type"
        },
        "biosource.biosource_name": {
            "title": "Biosource"
        },
        "biosource.individual.organism.name": {
            "title": "Organism"
        },
        "modifications.modification_name": {
            "title": "Modification"
        },
        "treatments.treatment_type": {
            "title": "Treatment"
        },
        "description":{
            "title": "Description"
        },
        "accession":{
            "title": "Accession"
        },
        "title":{
            "title": "Title"
        },
        "name":{
            "title": "Name"
        }
    }
}
