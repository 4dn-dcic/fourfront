{
    "title": "Biosample",
    "description": "Schema for submitting a biosample.",
    "id": "/profiles/biosample.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "biosource", "award", "lab"],
    "identifyingProperties": ["uuid","accession","aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/dbxrefs" },
        { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "BS"
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the biosample. Do not include experiment details, constructs or treatments.",
            "type": "string",
            "default": ""
        },
        "biosource": {
          "title": "Biosources",
          "description": "The cell lines or tissue types used in the experiment",
          "comment": "See Biosource sheet or collection for existing items",
          "type": "array",
          "default":[],
          "uniqueItems": true,
          "items": {
              "title": "Biosource",
              "comment": "use accessions",
              "type": "string",
              "linkTo": "Biosource"
          }
        },
        "biosample_protocols": {
            "title": "Biosample Protocols",
            "description": "Information about biosample preparation protocols.",
            "comment": "eg. cell culture protocol info",
            "type": "array",
            "items": {
                "title": "Protocols",
                "description": "Specific information for specific types of protocols",
                "type": "string",
                "linkTo": "Protocol"
            }
        },
        "cell_culture_details": {
            "title": "Cell culture related information",
            "description": "Link to biosample_cell_culture object that carries all cell culture related parameters",
            "type": "string",
            "ff_clear": "clone",
            "linkTo": "BiosampleCellCulture"
        },
        "modifications": {
            "title": "Stable genomic modifications",
            "description": "Expression or targeting vectors stably transfected to generate Crispr'ed or other genomic modification",
            "comment": "See Modifications sheet or collection for existing items",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Modifications",
                "description": "A single genomic modification of the biosample.",
                "type":  "string",
                "linkTo": "Modification"
            }
        },
        "treatments": {
            "title": "Treatments",
            "type": "array",
            "comment": "See Treatment sheet or collection for exisiting items",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Treatment",
                "type": "string",
                "linkTo": "Treatment"
            }
        },
        "biosample_relation": {
            "title": "Biosample relations",
            "description": "Related biosamples",
            "type": "array",
            "items": {
                "title": "Biosample relation",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "relationship_type": {
                        "type": "string",
                        "description": "A controlled term specifying the relationship between biosamples.",
                        "title": "Relationship Type",
                        "enum": [
                            "derived from",
                            "parent of"
                        ]
                    },
                    "biosample": {
                      "type": "string",
                      "description": "The related biosample",
                      "linkTo": "Biosample"
                    }
                }
            }
        }
    },
    "facets": {
        "biosource.biosource_type": {
            "title": "Biosource type"
        },
        "biosource_summary": {
            "title": "Biosource"
        },
        "biosource.individual.organism.name": {
            "title": "Organism"
        },
        "modifications_summary": {
            "title": "Modifications"
        },
        "treatments_summary": {
            "title": "Treatments"
        }
    }
}
