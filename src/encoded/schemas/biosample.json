{
    "title": "ENCODE Biosample",
    "id": "http://submit.encodedcc.org/profiles/biosample.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for submitting an ENCODE Biosample",
    "type": "object",
    "required": [ "award_name", "lab_name", "submitter_email", "term_name", "type", "source_name"],
    "default": null,
    "properties": {
        "description": {
            "default": null,
            "description": "A plain text description of the biosample",
            "title": "",
            "type": [
                "string",
                "null"
            ]
        },
        "submitter_email": {
            "description": "Email (username) of submiiter",
            "title": "Submitter Email",
            "type": "email"
        },
        "lab_name": {
            "description": "Name of the submitting lab",
            "title": "Lab Name",
            "type": "string"
        },
        "award_name": {
            "description": "Award (Grant) this submission is registered under",
            "title": "Award Name",
            "type": "string"
        },
        "term_id": {
            "default": null,
            "description": "Ontology term ID describing biosample type",
            "title": "Ontology ID",
            "type": [
                "string",
                "null"
            ],
            "pattern": "(UBERON|EFO|BTO|CL):[0-9]+"
        },
        "term_name": {
            "default": "new term will be requested",
            "description": "Ontology term describing biosample type",
            "title": "Ontology Term",
            "type":  "string"
        },
        "type": {
            "default": null,
            "description": "The sub-type of the biosample",
            "title": "Biosample Type",
            "type": {
                "enum" : [
                    "Primary cell line",
                    "Immortalized cell line",
                    "Tissue"
                ]
            }

        },
        "construct_names": {
            "default": null,
            "description": "List of construct names",
            "items": {
                "default": null,
                "description": "Transfection, fusion, or shRNA construct name",
                "title": "Construct Name",
                "type":  "string"
            },
            "title": "Construct Names",
            "type": [
                "array",
                "null"
            ]
        },
        "culture_harvest_date": {
            "default": null,
            "description": "Harvest date of cell culture",
            "title": "Culture Harvest Date",
            "type": [
                "string",
                "null"
            ]
        },
        "culture_start_date": {
            "default": null,
            "description": "Start date of culture",
            "title": "Culture Start Date",
            "type": [
                "string",
                "null"
            ]
        },
        "date_obtained": {
            "default": null,
            "description": "Date sample obtained by lab",
            "title": "Date Obtained",
            "type": [
                "string",
                "null"
            ]
        },
        "dbxref": {
            "default": null,
            "description": "List of Database (including Lab) cross-references",
            "items": {
                "properties": {
                    "database_name": {
                        "default": null,
                        "description": "A database name reference",
                        "title": "DB name",
                        "type": "string"
                    },
                    "database_ids": {
                        "default": null,
                        "description": "A list of database id numbers",
                        "title": "list of DB IDs",
                        "type":  "array",
                        "items": {
                            "description": "External Database identifier",
                            "title": "DB ID",
                            "type": "string"
                        }
                    }
                },
                "title": "Database Cross-Reference",
                "type": [
                    "object",
                    "null"
                ]
            },
            "title": "DBXREF List",
            "type": [
                "array",
                "null"
            ]
        },
        "protocol_document_list": {
            "default": null,
            "description": "List of biosample protocols associated with this biosample",
            "items": {
                "description": "Protocol document name",
                "title": "Protocol Document Name",
                "type": "string"
            },
            "title": "Protocol Document List",
            "type": [
                "array",
                "null"
            ]
        },
        "donor_accession": {
            "default": null,
            "description": "ENCODE Accession of the biosample donor",
            "title": "Donor Accession",
            "type": [
                "string",
                "null"
            ],
            "pattern": "^ENCDO[0-9][0-9][0-9][A-Z][A-Z][A-Z]"
        },
        "passage_number": {
            "default": null,
            "description": "Cell culture passage number",
            "title": "Passage Number",
            "type": [
                "integer",
                "null"
            ]
        },
        "related_biosample_list": {
            "default": null,
            "description": "List of related biosample",
            "title": "Related Biosamples",
            "type": [
                "array",
                "null"
            ],
            "items": {
                "properties": {
                    "relationship": {
                        "default": "derives_from",
                        "description": "The relationship type for the related biosample",
                        "title": "Relationship Type",
                        "type": {
                            "enum": [
                                "derived_from",
                                "contained_in",
                                "part_of"
                            ]
                    },
                    "biosample_accession": {
                        "description": "ENCODE Accession for the related biosample",
                        "title": "Biosample Accession",
                        "type": "string",
                        "pattern": "^ENCBS[0-9][0-9][0-9][A-Z][A-Z][A-Z]"
                    }
                },
                "title": "Biosample Relationship",
                "type": [
                    "object",
                    "null"
                ]
            },

        },
        "source_name": {
            "description": "Name of the biosample source (Lab or Company)",
            "title": "Biosample Source",
            "type": "string"
        },
        "starting_amount": {
            "default": null,
            "description": "Starting amount of Biosample",
            "title": "Starting Amount",
            "type": [
                "string",
                "null"
            ]
        },
        "treatment_name": {
            "default": null,
            "description": "Name of applied treatment",
            "title": "Treatment Name",
            "type": [
                "string",
                "null"
            ]
        }
    }
}