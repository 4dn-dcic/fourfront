{
    "title": "Biological Feature",
    "description": "A biological feature like a Gene, Protein, Cellular Structure.",
    "id": "/profiles/bio_feature.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["award", "lab"],
    "identifyingProperties": ["uuid", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/status"} ,
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/release_dates" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/tags" },
        { "$ref": "mixins.json#/dbxrefs" },
        { "$ref": "mixins.json#/static_embeds" }
    ],
    "mixinFacets" : [
        { "$ref": "mixins.json#/facets_common" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "description": {
            "title": "Description",
            "description": "A short description of the feature",
            "type": "string",
            "lookup": 10,
            "formInput": "textarea"
        },
        "feature_type": {
            "title": "Feature Type",
            "description": "A sequence ontology term indicating the type of feature",
            "type": "string",
            "linkTo": "OntologyTerm",
            "lookup": 10,
        },
        "genome_location": {
            "title": "Genomic Location",
            "description": "The location(s) of the feature on the genome",
            "type": "array",
            "lookup": 10,
            "items": {
                "title": "Genomic Region",
                "description": "Item indicating genome assembly, chromosome and coordinates of the region",
                "type": "string",
                "linkTo": "GenomicRegion"
            }
        },
        "gene_id": {
            "title": "NCBI gene id",
            "description": "Gene ID if the feature is or can be associated with a gene (eg. protein produced by a gene)",
            "type": "string",
            "lookup": 10,
        },
        "gene_info": {
            "title": "Gene Info",
            "description": "Information retrieved from NCBI on the gene_id if provided",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "preferred_symbol": {
                    "title": "Preferred Symbol",
                    "type": "string"
                },
                "official_symbol": {
                    "title": "Official Symbol",
                    "type": "string"
                },
                "synonyms": {
                    "title": "Synonyms",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "organism": {
                    "title": "Organism",
                    "type": "string",
                    "linkTo": "Organism"
                }
            }
        }
    },
    "facets": {
        "target_type": {
            "title": "Target type"
        }
    },
    "columns": {
        "target_type": {
          "title": "Target type"
        }
    }
}
