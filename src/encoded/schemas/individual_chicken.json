{
    "title": "Chicken Individual",
    "description": "Schema for submitting a chicken individual.",
    "id": "/profiles/individual_chicken.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["award", "lab"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "individual.json#/properties" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/release_dates" },
        { "$ref": "mixins.json#/documents" },
        { "$ref": "mixins.json#/tags" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/static_embeds" }
    ],
    "mixinFacets" : [
        { "$ref": "mixins.json#/facets_common" }
    ],
    "dependencies": {
      "age": [ "age_units"]
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "chicken_life_stage": {
            "title": "Chicken Life Stage",
            "type": "string",
            "lookup": 20,
            "suggested_enum": [
                "embryo",
                "chick",
                "adult"
            ]
        },
        "age": {
            "title": "Age of the Individual",
            "type": "number",
            "exclude_from": ["FFedit-create", "submit4dn"]
        },
        "age_units": {
            "title": "Age units",
            "type": "string",
            "exclude_from": ["FFedit-create", "submit4dn"]
        },
        "organism": {
            "default": "fed8c206-762f-497f-821b-1c8ff7900bd2",
            "exclude_from": ["submit4dn", "FFedit-create"],
            "lookup": 1,
            "linkEnum": ["fed8c206-762f-497f-821b-1c8ff7900bd2"]
        },
        "strain":{
          "title": "Strain",
          "lookup": 30,
          "type": "string"
        },
        "chicken_vendor":{
          "title": "Vendor for the Chicken Individual",
          "type": "string",
          "linkTo": "Vendor",
          "lookup": 40
        },
        "dbxrefs": {
            "@type": "@id",
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "title": "External identifiers",
            "description": "Unique identifiers from external resources.",
            "type": "array",
            "lookup": 1000,
            "uniqueItems": true,
            "items": {
                "title": "External identifier",
                "description": "A unique identifier from external resource.",
                "type":  "string",
                "pattern": "^(GEO:SAMN\\d+)$"
            }
        }
    },
    "columns": {
        "sex": {
            "title" : "Sex"
        },
        "chicken_life_stage": {
            "title" : "Chicken Life Stage"
        },
        "strain": {
            "title" : "Strain"
        }
    },
    "facets": {
        "sex": {
            "title" : "Sex"
        },
        "chicken_life_stage": {
            "title" : "Chicken Life Stage"
        },
        "strain": {
            "title" : "Strain"
        }
    }
}
