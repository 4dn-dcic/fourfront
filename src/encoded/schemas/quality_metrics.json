{
    "description": "Schema for reporting the specific calculation of an quality metrics",
    "id": "/profiles/quality_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["analysis_step_run", "files"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"}
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "step": {
            "title": "Analysis Step",
            "description": "Reference to template step in pipeline",
            "type": "string",
            "linkTo": "analysis_step_run"
        },
        "files": {
            "title": "Workflow Input files",
            "description": "All ENCFF files used to initiate the workflow run",
            "type": "array",
            "items": {
                "title": "Input File",
                "type": "string",
                "linkTo": "file"
            }
        },
        "qc_details": {
            "title": "QC details",
            "description": "QC metric, values and level of qc",
            "type": "array",
            "items": {
                "title": "QC detail",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "metric": {
                        "title": "QC Metric",
                        "description": "The lab specific name of the machine used.",
                        "type": "string",
                        "enum": [
                            "SPOT",
                            "Pearson correlation coefficient",
                            "IDR",
                            "Minimum unique reads",
                            "Minimum uniquely mapped reads",
                            "sequencing coverage"
                        ]
                    },
                    "value": {
                        "title": "QC value",
                        "anyOf": [
                            {"type": "string"},
                            {"format": "number"}
                        ]
                    },
                    "level": {
                        "title": "QC level",
                        "description": "The level at which comparisons should be visualized.",
                        "type": "string",
                        "enum": [
                            "file",
                            "replicate",
                            "library",
                            "experiment"
                        ]
                    }
                }
            }
        }
    }
}
