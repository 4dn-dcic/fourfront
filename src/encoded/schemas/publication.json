{
    "title": "Publication",
      "description": "LINKTO DATASET DELETED Schema for a publication page.",
    "id": "/profiles/publication.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "title"],
    "identifyingProperties": ["uuid", "title"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/attribution" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "title": {
            "title": "Title",
            "description": "Title of the publication or communication.",
            "uniqueKey": true,
            "type": "string"
        },
        "abstract": {
            "rdfs:subPropertyOf": "dc:abstract",
            "title": "Abstract",
            "description": "Abstract of the publication or communication.",
            "type": "string"
        },
        "contact_author": {
            "title": "Authors",
            "description": "Please select a user as the contact person",
            "type": "string",
            "comment": "for use of internal tracking",
            "linkTo": "User"
        },
        "authors": {
            "title": "Authors",
            "description": "All authors, with format Bernstein BE, Birney E, Dunham I,...",
            "type": "string"
        },
        "date_published": {
            "title": "Date published",
            "type": "string",
            "description": "please give the date YYYY-MM-DD format",
            "format": "date"
        },
        "journal": {
            "title": "Journal",
            "description": "The journal of the publication.",
            "type": "string"
        },
        "status": {
            "title": "Status",
            "type": "string",
            "default": "in preparation",
            "enum" : [
                "planned",
                "in preparation",
                "submitted",
                "in revision",
                "in press",
                "published",
                "deleted",
                "replaced"
            ]
        },
        "PMID":{
            "title": "Pubmed Identifier",
            "description": "Pubmed ID for the published publications.",
            "type": "string",
            "uniqueKey":  "publication:PMID",
            "pattern": "^PMID:[0-9]*"
        },
        "url": {
            "title": "URL",
            "description": "External resources with additional information or supplemental files associated with the publication.",
            "type": "string",
            "format": "uri"
        },
        "categories": {
            "title": "Categories",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Category",
                "type": "string",
                "enum" : [
                    "human disease",
                    "basic biology",
                    "software tool",
                    "database",
                    "integrative analysis",
                    "technology development",
                    "data standard",
                    "key publication",
                    "pilot phase publication",
                    "model organism biology",
                    "tutorial",
                    "genomic annotations",
                    "production"
                ]
            }
        },
        "published_by": {
            "title": "Published by",
            "type": "array",
            "uniqueItems": true,
            "default": ["ENCODE"],
            "items": {
                "title": "Published by",
            "type": "string",
            "enum": [
                "4DN",
                "External"
                ]
            }
        }
    },
    "facets": {
        "status": {
            "title": "Publication status"
        },
        "categories": {
            "title": "Category"
        },
        "supplementary_data.supplementary_data_type": {
            "title": "Available supplemental data"
        },
        "publication_year": {
            "title": "Publication year"
        },
        "journal": {
            "title": "Journal"
        },
        "published_by": {
            "title": "Published by"
        }
    },
    "columns": {
        "title": {
            "title": "Title"
        },
        "date_published": {
            "title": "Publication date"
        },
        "authors": {
            "title": "Authors"
        },
        "status": {
            "title": "Publication status"
        },
        "journal": {
            "title": "Journal"
        },
        "volume": {
            "title": "Volume"
        },
        "issue": {
            "title": "Issue"
        },
        "page": {
            "title": "Page"
        },
        "data_used": {
            "title": "Data used"
        },
        "abstract": {
            "title": "Abstract"
        },
        "supplementary_data.supplementary_data_type": {
            "title": "Available data"
        },
        "supplementary_data.file_format": {
            "title": "File format"
        },
        "supplementary_data.url": {
            "title": "URL"
        },
        "supplementary_data.data_summary": {
            "title": "Data summary"
        },
        "identifiers": {
            "title": "identifiers"
        }
    },
    "boost_values": {
        "title": 1.0,
        "authors": 1.0,
        "PMID": 1.0,
        "abstract": 1.0
    },
    "sort_by": {
        "publication_year": {
            "ignore_unmapped": true,
            "order": "desc",
            "missing": "_last"
        }
    }
}
