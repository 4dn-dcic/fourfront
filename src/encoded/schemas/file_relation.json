{
    "title": "File Relation",
    "description": "Schema for capturing relationships between files.",
    "comment": "Use as mixin.  Do not make stand alone objects",
    "id": "/profiles/file_relation.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["relationship_type","file"],
    "approvalRequired": [],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" },
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "relationship_type": {
            "type": "string",
            "description": "A controlled term specifying the relationship between files.",
            "title": "Relationship Type",
            "enum": [
                "supercedes",
                "is superceded by",
                "derived from",
                "paired with"
            ]
        },
        "file": {
          "type": "string",
          "description": "The related file",
          "linkTo": "File"
        }
    }
}
