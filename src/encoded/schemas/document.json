{
    "title": "ENCODE Document",
    "id": "/profiles/document.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "version": "0.01",
    "description": "Schema for submitting an ENCODE document or protocol",
    "type": "object",
    "required": [ "type", "lab", "award"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/attachment" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema-version": {
            "description": "The version of JSON schema files used in the generation of the example",
            "comment":  "Must match the specific schemas' `version` property",
            "type": "string",
            "pattern": "^[0-9]\\.[0-9][0-9]$"
        },
        "md5sum": {
            "description": "The MD5 sum of the doc, calculated upon upload",
            "title": "MD5 Sum",
            "type": "string",
            "format": "md5sum"
        },
        "type": {
            "description": "The specific purpose of the document or protocol",
            "title": "Document Type",
            "type": "string",
            "enum": [
                "growth protocol",
                "extraction protocol",
                "certificate of analysis",
                "iPS cell reprogramming protocol",
                "differentiation protocol",
                "data sheet",
                "cell isolation and sorting protocol",
                "treatment protocol",
                "vector construct image",
                "biosample validation",
                "general protocol",
                "excision protocol",
                "transfection protocol",
                "construct information",
                "XXX NEED REVIEW",
                "unclassified document",
                "construct validation",
                "construct image",
                "cell isolation protocol",
                "iPS reprogramming protocol"
           ]
        },
        "description": {
            "default": "",
            "description": "A plain text description of the document",
            "title": "Description",
            "type": "string"
        },
        "references": {
            "default": [],
            "description": "List of references (Pubmed IDs)",
            "title": "References",
            "reference": {
                "description": "Pubmed id for a published reference",
                "title": "Pubmed Reference",
                "type": "string",
                "pattern": "^PMID:[0-9]+$"
            },
            "type": "array"
        }
    }
}