{
    "title": "Phenotype",
    "description": "We should get this from HPO or something --- https://hpo.jax.org/app/download/ontology",
    "id": "/profiles/phenotype.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["term_name", "term_id"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": true,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/static_embeds" }
    ],
    "properties": {
        "term_name" : {
            "title" : "Standard Term Name",
            "type" : "string"
        },
        "term_id" : {
            "title" : "HPO Identifier",
            "description" : "Identifier of phenotype at hpo.jax.org. E.g. \"HP:0000347\"",
            "type" : "string",
            "uniqueKey": true
        },
        "parent_term" : {
            "title": "Parent Term",
            "type" : "string",
            "linkTo" : "Phenotype"
        },
        "definition" : {
            "title" : "Definition",
            "description": "Definition of this disease",
            "type" : "string"
        },
        "synonyms" : {
            "type" : "array",
            "title" : "Synonyms",
            "items" : {
                "type" : "string",
                "title": "Synonym"
            }
        },
        "comment" : {
            "type" : "string",
            "title" : "Comment",
            "formInput": "textarea"
        }
    }
}
