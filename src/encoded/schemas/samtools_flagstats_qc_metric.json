{
    "description": "Schema for reporting 'samtools flagstats' quality metric",
    "id": "/profiles/samtools_flagstats_qc_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["step_run","applies_to"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "quality_metric.json#/properties" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/standard_status"},
        { "$ref": "mixins.json#/assay" }
   ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "attachment": {
            "title": "Document file metadata",
            "type": "object",
            "additionalProperties": false,
            "formInput": "file",
            "properties": {
                "download": {
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "comment": "Internal webapp URL for document file",
                    "type": "string"
                },
                "type": {
                    "title": "MIME type",
                    "type": "string",
                    "enum": [
                        "text/plain",
                    ]
                },
                "size": {
                    "title": "File size",
                    "type": "integer"
                }
            }
        },
        "diff_chroms": {
            "type": "number",
            "description": "mate mapped different chr (mapQ>=5)"
        },
        "diff_chroms_qc_failed": {
            "type": "number",
            "description": "mate mapped different chr (mapQ>=5) - qc failed"
        },
        "duplicates": {
            "type": "number",
            "description": "duplicates"
        },
        "duplicates_qc_failed": {
            "type": "number",
            "description": "duplicates - qc failed"
        },
        "mapped": {
            "type": "number",
            "description": "mapped"
        },
        "mapped_pct": {
            "type": "string",
            "description": "mapped - percent"
        },
        "mapped_qc_failed": {
            "type": "number",
            "description": "mapped - qc failed"
        },
        "paired": {
            "type": "number",
            "description": "paired"
        },
        "paired_properly": {
            "type": "number",
            "description": "properly paired"
        },
        "paired_properly_pct": {
            "type": "string",
            "description": "properly paired - percent"
        },
        "paired_properly_qc_failed": {
            "type": "number",
            "description": "properly paired - qc failed"
        },
        "paired_qc_failed": {
            "type": "number",
            "description": "paired - qc failed"
        },
        "read1": {
            "type": "number",
            "description": "read1"
        },
        "read1_qc_failed": {
            "type": "number",
            "description": "read1 - qc failed"
        },
        "read2": {
            "type": "number",
            "description": "read2"
        },
        "read2_qc_failed": {
            "type": "number",
            "description": "read2 - qc failed"
        },
        "singletons": {
            "type": "number",
            "description": "singletons"
        },
        "singletons_pct": {
            "type": "string",
            "description": "singletons - percent"
        },
        "singletons_qc_failed": {
            "type": "number",
            "description": "singletons - qc failed"
        },
        "total": {
            "type": "number",
            "description": "total"
        },
        "total_qc_failed": {
            "type": "number",
            "description": "total - qc failed"
        },
        "with_itself": {
            "type": "number",
            "description": "with itself and mate mapped"
        },
        "with_itself_qc_failed": {
            "type": "number",
            "description": "with itself and mate mapped - qc failed"
        }
    }
}
