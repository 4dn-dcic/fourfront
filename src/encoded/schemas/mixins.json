    "attachment": {
        "attachment": {
            "title": "Attached File",
            "description" : "File attached to this Item.",
            "type": "object",
            "lookup": 1,
            "additionalProperties": false,
            "formInput": "file",
            "attachment": true,
            "ff_flag": "clear clone",
            "properties": {
                "download": {
                    "title": "File Name",
                    "description" : "File Name of the attachment.",
                    "type": "string"
                },
                "href": {
                    "internal_comment": "Internal webapp URL for document file",
