{
    "description": "Schema for reporting 'samtools stats' summary as a quality metric",
    "id": "/profiles/samtools_stats_qc_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["step_run","applies_to"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "quality_metric.json#/properties" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/standard_status"},
        { "$ref": "mixins.json#/assay" }
   ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "attachment": {
            "title": "Document file metadata",
            "type": "object",
            "additionalProperties": false,
            "formInput": "file",
            "properties": {
                "download": {
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "comment": "Internal webapp URL for document file",
                    "type": "string"
                },
                "type": {
                    "title": "MIME type",
                    "type": "string",
                    "enum": [
                        "text/plain",
                    ]
                },
                "size": {
                    "title": "File size",
                    "type": "integer"
                }
            }
        },
        "1st fragments": {
            "type": "number",
            "description": "1st fragments"
        },
        "average length": {
            "type": "number",
            "description": "average length"
        },
        "average quality": {
            "type": "number",
            "description": "average quality"
        },
        "bases duplicated": {
            "type": "number",
            "description": "bases duplicated"
        },
        "bases mapped": {
            "type": "number",
            "description": "bases mapped"
        },
        "bases mapped (cigar)": {
            "type": "number",
            "description": "bases mapped (cigar)"
        },
        "bases trimmed": {
            "type": "number",
            "description": "bases trimmed"
        },
        "error rate": {
            "type": "number",
            "description": "error rate"
        },
        "filtered sequences": {
            "type": "number",
            "description": "filtered sequences"
        },
        "insert size average": {
            "type": "number",
            "description": "insert size - average"
        },
        "insert size standard deviation": {
            "type": "number",
            "description": "insert size - standard deviation"
        },
        "inward oriented pairs": {
            "type": "number",
            "description": "inward oriented pairs"
        },
        "is sorted": {
            "type": "number",
            "description": "is sorted"
        },
        "last fragments": {
            "type": "number",
            "description": "last fragments"
        },
        "maximum length": {
            "type": "number",
            "description": "maximum length"
        },
        "mismatches": {
            "type": "number",
            "description": "mismatches"
        },
        "non-primary alignments": {
            "type": "number",
            "description": "non-primary alignments"
        },
        "outward oriented pairs": {
            "type": "number",
            "description": "outward oriented pairs"
        },
        "pairs on different chromosomes": {
            "type": "number",
            "description": "pairs on different chromosomes"
        },
        "pairs with other orientation": {
            "type": "number",
            "description": "pairs with other orientation"
        },
        "raw total sequences": {
            "type": "number",
            "description": "raw total sequences"
        },
        "reads MQ0": {
            "type": "number",
            "description": "reads MQ0"
        },
        "reads QC failed": {
            "type": "number",
            "description": "reads QC failed"
        },
        "reads duplicated": {
            "type": "number",
            "description": "reads duplicated"
        },
        "reads mapped": {
            "type": "number",
            "description": "reads mapped"
        },
        "reads mapped and paired": {
            "type": "number",
            "description": "reads mapped and paired"
        },
        "reads paired": {
            "type": "number",
            "description": "reads paired"
        },
        "reads properly paired": {
            "type": "number",
            "description": "reads properly paired"
        },
        "reads unmapped": {
            "type": "number",
            "description": "reads unmapped"
        },
        "sequences": {
            "type": "number",
            "description": "sequences"
        },
        "total length": {
            "type": "number",
            "description": "total length"
        }
    }
}
