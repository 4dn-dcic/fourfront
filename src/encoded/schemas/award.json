{
    "title": "Award (Grant)",
    "id": "/profiles/award.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "version": "0.01",
    "description": "Schema for submitting an Award (Grant) for the ENCODE Project",
    "required": [ "name"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/uuid" }
    ],
    "properties": {
        "schema-version": {
            "description": "The version of JSON schema files used in the generation of the example",
            "comment":  "Must match the specific schemas' `version` property",
            "type": "string",
            "pattern": "^[0-9]\\.[0-9][0-9]$"
        },
        "title": {
            "description": "The long name of the award/grant - from NIH database",
            "title": "Award Title",
            "type": "string"
        },
        "name": {
            "description": "Official NIH reference number for the award",
            "title": "Award Name (NIH reference number)",
            "type": "string",
            "pattern": "^[A-Za-z0-9\\-]+$"
       },
        "description": {
            "default": "",
            "description": "Long description of the award.",
            "title": "Award Description",
            "type": "string"
        },
        "start_date": {
            "description": "Start date for the award",
            "title": "Start Date",
            "type": "string",
            "format": "date"
        },
        "end_date": {
            "description": "End date for the award",
            "title": "End Date",
            "type": "string",
            "format": "date"
        },
        "url": {
            "default": "",
            "description": "URL for the award or grant",
            "title": "Award URL",
            "type": "string",
            "format": "uri"
        },
        "pi": {
            "description": "Principle Investigator of the award",
            "comment": "For automatic submission submit the email, first & last name, or collegue uuid for the PI",
            "title": "P.I.",
            "type": "string",
            "linkTo": "user"
        },
        "rfa": {
            "default": "",
            "description": "Project RFA",
            "title": "RFA",
            "type": "string"
        },
        "project": {
            "default": "",
            "title": "Project",
            "type": "string"
        }
    }
 }
