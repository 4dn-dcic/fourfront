        },
        "month_released": {
            "title": "Date released",
            "type": "string"
        },
        "lab.title": {
            "title": "Lab",
            "type": "string"
        },
        "award.project": {
            "title": "Project",
            "type": "string"
        }
    },
    "columns": {
