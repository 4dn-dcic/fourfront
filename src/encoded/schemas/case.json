{
    "title": "Case",
    "id": "/profiles/case.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["title", "project", "institution"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": true,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/attribution" }
    ],
    "properties": {
        "accession" : {
            "accessionType" : "CA"
        },
        "title": {
            "title": "Title",
            "description": "Optional title for this case",
            "type": "string"
        },
        "case_samples": {
            "title": "Case Samples",
            "type": "array",
            "uniqueItems": true,
            "items" : {
                "title": "Case Sample",
                "type": "object",
                "properties": {
                    "sample": {
                        "title" : "Sample",
                        "description": "Sample used in the case",
                        "type" : "string",
                        "linkTo" : "Sample"
                    },
                    "proband": {
                        "title": "Proband",
                        "description": "Whether this sample represents the proband of the case",
                        "type": "boolean"
                    }
                }
            }
        },
        "description": {
            "title": "Description",
            "description": "A description of this case",
            "type": "string",
            "lookup": 20,
            "formInput": "textarea"
        }
    }
}
