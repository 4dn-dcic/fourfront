{
    "title": "Experiment Set",
    "description": "Schema for submitting metadata for an experiment set.",
    "id": "/profiles/experiment_set.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "award", "lab", "description"],
    "identifyingProperties": ["uuid", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/documents" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "ES"
        },
        "date_released": {
            "title": "Date released",
            "comment": "Do not submit, value is assigned when released.",
            "type": "string",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ],
            "exclude_from": ["submit4dn", "FFedit-create"],
            "permission": "import_items"
        },
        "experiments_in_set": {
            "title": "Set of experiments",
            "description": "List of experiments to be associatedas a set.",
            "type": "array",
            "exclude_from": ["submit4dn"],
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Experiment",
                "type": "string",
                "linkTo": "Experiment"
            }
        },
        "experimentset_type": {
            "title": "Experiment Set type",
            "description": "The categorization of the set of experiments.",
            "type": "string",
            "default": "custom",
            "exclude_from": ["submit4dn", "FFedit-create"],
            "enum" : [
              "custom",
              "replicate"
            ]
        },
        "description": {
            "title": "Description",
            "description": "A description of why experiments are part of the set.",
            "type": "string",
            "default": ""
        }
    },
    "facets": {
        "experimentset_type": {
            "title": "Experiment Set Type"
        },
        "experiments_in_set.experiment_type": {
            "title": "Experiment Type"
        },
        "experiments_in_set.award.project": {
            "title": "Project"
        },
        "experiments_in_set.biosample.biosource.individual.organism.name": {
            "title": "Organism"
        },
        "experiments_in_set.biosample.biosource.biosource_type": {
            "title": "Biosource type"
        },
        "experiments_in_set.biosample.biosource_summary": {
            "title": "Biosource"
        },
        "experiments_in_set.digestion_enzyme.name": {
            "title": "Enzyme"
        },
        "experiments_in_set.biosample.modifications_summary": {
            "title": "Modifications"
        },
        "experiments_in_set.biosample.treatments_summary": {
            "title": "Treatments"
        },
        "experiments_in_set.lab.title": {
            "title": "Lab"
        }
    }
}
