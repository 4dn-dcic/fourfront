{
    "title": "Biosource",
    "description": "General description of the biological material, e.g. cell line",
    "id": "/profiles/biosource.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["biosource_type", "award", "lab"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "SR"
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the biosource.",
            "type": "string",
            "default": ""
        },
        "biosource_type": {
            "title": "Biosource Type",
            "description": "The categorization of the biosource.",
            "type": "string",
            "enum" : [
              "primary cell",
              "immortalized cell line",
              "tissue",
              "in vitro differentiated cells",
              "induced pluripotent stem cell line",
              "whole organisms",
              "stem cell"
            ]
          },
          "individual": {
              "title": "Individual",
              "description": "Source of the biological material, donor.",
              "comment": "See Individual sheet or collection for existing items",
              "type": "string",
              "linkTo": "Individual"
          },
          "modifications": {
              "title": "Stable Genomic Modifications",
              "description": "Expression or targeting vectors stably transfected to generate Crispr'ed or other genomic modification",
              "type": "array",
              "default": [],
              "uniqueItems": true,
              "items": {
                  "title": "Modifications",
                  "description": "A single stable genomic modification of the biosource.",
                  "type":  "string",
                  "linkTo": "Modification"
              }
          },
          "cell_line": {
              "title": "Cell Line Name",
              "description": "Ontology term for the cell line used.",
              "type":  "string",
              "enum": [
                  "H1-hESC",
                  "GM12878",
                  "IMR-90",
                  "HFF-hTERT",
                  "F121-9-CASTx129",
                  "K562",
                  "RPE-hTERT",
                  "HEK293",
                  "HAP-1",
                  "U2OS",
                  "WTC-11",
                  "H9",
                  "F123-CASTx129",
                  "HCT116",
                  "CC-2551",
                  "CH12-LX",
                  "KBM-7",
                  "192627",
                  "CC-2517",
                  "HeLa-S3",
                  "HFF",
                  "HFFc6",
                  "SK-N-DZ",
                  "A549",
                  "NCI-H460",
                  "SK-N-MC",
                  "T47D",
                  "SK-MEL-5",
                  "G401",
                  "Panc1",
                  "Caki2",
                  "LNCaP clone FGC",
                  "RPMI-7951",
                  "SJCRH30",
                  "GM19238",
                  "GM19239",
                  "GM19240",
                  "HG00731",
                  "HG00732",
                  "HG00733",
                  "HG00512",
                  "HG00513",
                  "HG00514"
              ]
          },
          "cell_line_termid": {
              "title": "Cell Line EFO ID",
              "description": "DON'T SUBMIT - CALCULATED",
              "type": "string",
              "permission": "import_items"
          },
          "cell_line_tier": {
              "title": "Cell Line Tier",
              "description": "DON'T SUBMIT - CALCULATED",
              "type": "string",
              "default": "Unclassified",
              "permission": "import_items",
              "enum": [
                  "Tier 1",
                  "Tier 2",
                  "Unclassified"
              ]
          },
          "tissue": {
              "title": "Tissue Name",
              "description": "Anatomy (UBERON) Ontology term for the tissue used.",
              "type":  "string",
              "linkTo": "OntologyTerm"
          },
          "biosource_vendor": {
                "title": "Biosource Vendor",
                "description": "The Lab or Vendor that provided the biosource.",
                "type": "string",
                "linkTo": "Vendor"
          },
          "url": {
              "title": "URL",
              "description": "An external resource with additional information about the biosource.",
              "type": "string",
              "format": "uri"
          },
          "SOP_cell_line":{
              "title": "SOP for the Cell Line",
              "description": "Standard operation protocol for the cell line as determined by 4DN Cells Working Group",
              "type": "string",
              "linkTo": "Protocol"
          }
      },
      "facets": {
          "biosource_type": {
              "title": "Biosource Type"
          },
          "biosource_name": {
              "title": "Biosource"
          },
          "individual.organism.name": {
              "title": "Organism"
          }

      }
}
