{
    "title": "Biosource",
    "description": "Schema for submitting a biosource.",
    "id": "/profiles/biosource.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["biosource_type"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "SR"
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the biosource.",
            "type": "string",
            "default": ""
        },
        "biosource_type": {
            "title": "Biosource type",
            "description": "The categorization of the biosource.",
            "type": "string",
            "enum" : [
              "primary cell",
              "immortalized cell line",
              "tissue",
              "in vitro differentiated cells",
              "induced pluripotent stem cell line",
              "whole organisms",
              "stem cell"
            ]
          },
          "individual": {
              "title": "Individual",
              "description": "Information on donor or individual mouse or other organism.",
              "comment": "For human biosamples, see human_individual.json for available identifiers.",
              "type": "string",
              "linkTo": "Individual"
          },
          "cell_line": {
              "title": "Cell line name",
              "description": "Ontology term for the cell line used.",
              "type":  "string",
              "comment": "enforce EFO ontology term for a cell line?"
          },
          "tissue": {
              "title": "Tissue name",
              "description": "Anatomy (UBERON) Ontology term for the tissue used.",
              "type":  "string",
              "comment": "enforce UBERON ontology term for a tissue type?"
          },
          "biosource_vendor": {
                "title": "Biosource Vendor",
                "description": "The Lab or Vendor that provided the biosource.",
                "type": "string",
                "linkTo": "Vendor"
          },
          "url": {
              "title": "URL",
              "description": "An external resource with additional information about the biosource.",
              "type": "string",
              "format": "uri"
          }
      },
      "facets": {
          "biosource_type": {
              "title": "Biosource type"
          },
          "biosource_name": {
              "title": "Biosource"
          },
          "individual.organism.name": {
              "title": "Organism"
          }

      },
      "columns": {
          "biosource_type": {
              "title": "Biosource type"
          },
          "biosource_name": {
              "title": "Biosource"
          },
          "individual.organism.name": {
              "title": "Organism"
          },
          "description":{
              "title": "Description"
          },
          "accession":{
              "title": "Accession"
          },
          "title":{
              "title": "Title"
          },
          "name":{
              "title": "Name"
          }
      }
}
