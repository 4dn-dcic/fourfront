{
    "title": "Construct",
    "description": "Schema for submitting a construct.",
    "id": "/profiles/construct.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["construct_type", "description", "vendor"],
    "identifyingProperties": ["uuid","aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/references" },
        { "$ref": "mixins.json#/documents" },
        { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the biosource.",
            "type": "string"
        },
        "construct_type": {
            "title": "Construct type",
            "description": "The categorization of the construct.",
            "type": "string",
            "enum" : [
              "crispr construct",
              "rnai construct",
              "tagging construct"
            ]
          },
          "tags": {
              "title": "Tags",
              "description": "String describing tags the construct contains.",
              "type":  "string",
              "comment": "Do we want to allow more than 1 (array) and/or CV"
          },
          "designed_to_target": {
              "title": "Designed to Target",
              "description": "The gene or genomic region that this construct is designed to target",
              "type":  "string"
          },
          "vector_backbone": {
              "title": "Vector Backbone",
              "description": "The vector backbone for this construct",
              "type":  "string"
          },
          "insert_sequence": {
              "title": "Insert Sequence",
              "description": "Nucleotide Sequence of the Insert",
              "type":  "string",
              "pattern": "^ATGCN$"
          },
          "construct_vendor": {
              "title": "Construct Vendor",
              "description": "The Lab or Vendor that provided the construct.",
              "type": "string",
              "linkTo": "Vendor"
          },
          "map": {
              "title": "Construct Map",
              "description": "Map of the construct - document",
              "type": "string",
              "linkTo": "Document"
          },
          "url": {
              "title": "URL",
              "description": "An external resource with additional information about the biosource.",
              "type": "string",
              "format": "uri"
          }
      }
}
