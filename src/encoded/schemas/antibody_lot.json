{
    "title": "ENCODE Antibody Lot",
    "id": "/profiles/antibody_lot.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for submitting an ENCODE Antibody (no target or validation information)",
    "type": "object",
    "required": [ "award", "lab", "product_id", "lot_id", "source"],
    "additionalProperties": false,
        "accession": {
            "default": "",
            "description": "ENCODE DCC assigned accession",
            "comments": "Not to be submitted or updated by non-admin users.",
            "title": "Antibody Accession",
            "type": "string",
            "format": "accession"
        },
        "description": {
            "default": "",
            "description": "A plain text description of the Antibody",
            "title": "Antibody Description",
            "type": "string"
        },
        "lab": {
            "default": "ENCODE Project",
            "description": "Submitting Lab",
            "comment": "Automatic submitters can supply a Lab UUID or Name",
            "title": "Lab",
            "type": "string",
            "format": "lab_link"
        },
        "award": {
            "default": "ENCODE",
            "description": "Award (Grant) this submission is registered under",
            "comment": "Automatic submitters can supply an Award UUID, name, or number",
            "title": "Award Name",
            "type": "string",
            "format": "award_link"
        },
        "lot_id": {
            "description": "The vendor's id code for the antibody lot",
            "title": "Antibody Lot ID",
            "type": "string"
        },
        "product_id": {
            "description": "The vendor's antibody product code",
            "title": "Antibody Product ID",
            "type": "string"
        },
        "antigen_sequence": {
            "description": "Sequence of the antigen used in raising the antibody",
            "title": "Antigen Sequence",
            "type": "string"
        },
        "clonality": {
            "default": "Unknown",
            "description": "Whether the antibody is mono- or poly- clonal",
            "title": "Antibody Clonality",
            "type": {
                "enum": [
                    "polyclonal",
                    "monoclonal",
                    "Unknown"
                ]
            }
        },
        "dbxref": {
            "default": {},
            "description": "List of Database (including Lab) cross-references",
            "additionalProperties": {
                "default": [],
                "description": "List of Database IDs",
                "title": "Database IDs",
                "type":  "array",
                "items": {
                    "description": "Database identifiers",
                    "title": "DB ID",
                    "type": "string"
                }
            },
            "title": "DBXREFs",
            "type": "object"
        },
        "host_organism": {
            "description": "Organism antibody was grown in.",
            "comment": "These are not linked, currently - this should be replace with another organism object",
            "title": "Host Organism",
            "type": {
                "enum": [
                    "rabbit",
                    "goat",
                    "mouse"
                ]
            }
        },
        "isotype": {
            "default": "Unknown",
            "description": "Isotype of the antibody (IgA, IgD, etc.)",
            "title": "Antibody Isotype",
            "type": {
                "enum": [
                    "IgA1",
                    "IgA2",
                    "IgD",
                    "IgG",
                    "IgG1",
                    "IgG1κ",
                    "IgG1λ",
                    "IgG2",
                    "IgG2κ",
                    "IgG2λ",
                    "IgG2a",
                    "IgG2aκ",
                    "IgG2aλ",
                    "IgG2b",
                    "IgG2bκ",
                    "IgG2bλ",
                    "IgG3",
                    "IgG3κ",
                    "IgG4",
                    "IgA",
                    "IgM",
                    "IgE",
                    "serum",
                    "Unknown"
                ]
            }
         },
        "purification": {
            "default": "Unknown",
            "description": "Method by which antibody was purified",
            "title": "Purification Method",
            "type": {
                "enum": [
                    "Protein A chromatography",
                    "Protein A/G",
                    "Affinity",
                    "Protein A",
                    "Protein G",
                    "Crude",
                    "other",
                    "IEC",
                    "IMAC",
                    "Tissue culture supernatent",
                    "Unknown"
                ]
            }
        },
        "url": {
            "default": "",
            "description": "External URL for the specific antibody at vendor site",
            "title": "External URL",
            "type": "string",
            "format": "uri"
        }
    }
}