{
    "title": "ENCODE Antibody Lot",
    "id": "http://submit.encodedcc.org/profiles/antibody-lot.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for submitting an ENCODE Antibody (no target or validation information)",
    "type": "object",
    "required": [ "award_name", "lab_name", "submitter_email", "product_id", "lot_id", "source_name"],
    "properties": {
        "description": {
            "default": null,
            "description": "A plain text description of the Antibody",
            "title": "",
            "type": [
                "string",
                "null"
            ]
        },
        "submitter_email": {
            "description": "Email (username) of submiiter",
            "title": "Submitter Email",
            "type": "email"
        },
        "lab_name": {
            "description": "Name of the submitting lab",
            "title": "Lab Name",
            "type": "string"
        },
        "award_name": {
            "description": "Award (Grant) this submission is registered under",
            "title": "Award Name",
            "type": "string"
        },
        "lot_id": {
            "default": null,
            "description": "",
            "title": "",
            "type": [
                "string",
                "null"
            ]
        },
        "product_id": {
            "default": null,
            "description": "",
            "title": "",
            "type": [
                "string",
                "null"
            ]
        },
        "antigen_sequence": {
            "default": null,
            "description": "",
            "title": "",
            "type": [
                "string",
                "null"
            ]
        },
        "clonality": {
            "default": null,
            "description": "",
            "title": "",
            "type": [
                "string",
                "null"
            ]
        },
        "dbxref": {
            "default": null,
            "description": "List of Database (including Lab) cross-references",
            "items": {
                "properties": {
                    "database_name": {
                        "default": null,
                        "description": "A database name reference",
                        "title": "DB name",
                        "type": "string"
                    },
                    "database_ids": {
                        "default": null,
                        "description": "A list of database id numbers",
                        "title": "list of DB IDs",
                        "type":  "array",
                        "items": {
                            "description": "External Database identifier",
                            "title": "DB ID",
                            "type": "string"
                        }
                    }
                },
                "title": "Database Cross-Reference",
                "type": [
                    "object",
                    "null"
                ]
            },
            "title": "DBXREF List",
            "type": [
                "array",
                "null"
            ]
        },
        "host_organism": {
            "default": null,
            "description": "",
            "title": "",
            "type": [
                "string",
                "null"
            ]
        },
        "isotype": {
            "default": null,
            "description": "",
            "title": "",
            "type": [
                "string",
                "null"
            ]
        },
        "purification": {
            "default": null,
            "description": "",
            "title": "",
            "type": [
                "string",
                "null"
            ]
        },
        "url": {
            "default": null,
            "description": "",
            "title": "",
            "type": [
                "string",
                "null"
            ]
        }
    }
}