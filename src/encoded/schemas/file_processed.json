{
    "title": "Processed file from workflow runs",
    "description": "Files produced by 4DN pipelines.",
    "id": "/profiles/file_processed.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["file_format", "award", "lab"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/release_dates" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/dbxrefs" },
        { "$ref": "mixins.json#/tags" },
        { "$ref": "file.json#/properties" }
    ],
    "mixinFacets": [
        { "$ref": "file.json#/facets"},
        { "$ref": "mixins.json#/facets_common" }
    ],
    "mixinColumns": [
        { "$ref": "file.json#/columns"}
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
		"higlass_uid": {
			"title": "Higlass UID",
			"type": "string"
		},
        "file_format": {
            "title": "File Format",
            "type": "string",
            "suggested_enum": [
                "bam",
                "bai",
                "pairs",
                "pairsam",
                "pairs_px2",
                "pairsam_px2",
                "cool",
                "hic",
                "mcool",
                "normvector_juicerformat",
                "zip",
                "bg",
                "other"
            ]
        },
        "file_type": {
            "title": "File Type",
            "description": "The type of file based on the information in the file.",
            "suggested_enum": [
                "read pairs",
                "alignments",
                "unfiltered alignments",
                "contact list",
                "contact matrix",
                "normalized contact matrix",
                "long range chromatin interactions",
                "intensity values",
                "peaks",
                "image",
                "other"
            ]
        },
         "source_experiments": {
             "title": "Source Experiments",
             "description": "Experiments that this file is associated with",
             "type": "array",
             "items": {
                 "title": "Source Experiment",
                 "type": "string"
             }
        }
     },
     "file_format_file_extension": {
        "bam": ".bam",
        "bai": ".bam.bai",
        "pairs": ".pairs.gz",
        "pairsam": ".sam.pairs.gz",
        "pairs_px2": ".pairs.gz.px2",
        "pairsam_px2": ".sam.pairs.gz.px2",
        "cool": ".cool",
        "mcool": ".mcool",
        "hic": ".hic",
        "normvector_juicerformat": ".normvector.juicerformat.gz",
        "zip": ".zip",
        "bg": ".bg",
        "other": ""
    },
    "facets" : {
        "workflow_run_inputs.workflow.title" : {
            "title" : "Input of Workflow"
        },
        "workflow_run_outputs.workflow.title" : {
            "title" : "Output of Workflow"
        }
    }
}
