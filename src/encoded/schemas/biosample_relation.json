{
    "title": "Biosample Relation",
    "description": "Schema for capturing relationships.",
    "comment": "Use as mixin.  Do not make stand alone objects",
    "id": "/profiles/biosample_relation.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["relationship_type","biosample"],
    "approvalRequired": [],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/notes" },
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "relationship_type": {
            "type": "string",
            "description": "A controlled term specifying the relationship between biosamples.",
            "title": "Relationship Type",
            "enum": [
                "derived from",
                "pooled from",
                "part of"
            ]
        },
        "biosample": {
          "type": "string",
          "description": "The related biosample",
          "linkTo": "Biosample"
        }
    }
}
