{
    "title" : "Quality Metric for FASTQC",
    "description": "Schema for reporting the specific calculation of an quality metrics",
    "id": "/profiles/quality_metric_fastqc.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["award", "lab"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid", "aliases"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "quality_metric.json#/properties" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/release_dates" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/static_embeds" },
        { "$ref": "quality_metric.json#/properties" }
   ],
    "mixinFacets" : [
        { "$ref": "mixins.json#/facets_common" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "Basic Statistics": {
            "title": "Basic Statistics",
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "qc_order": 1
        },
        "Total Sequences": {
            "title": "Total Sequences",
            "type": "number",
            "qc_order": 2
        },
        "Sequences flagged as poor quality": {
            "title": "Sequences Flagged as Poor Quality",
            "type": "number",
            "qc_order": 3
        },
        "Sequence length": {
            "title": "Sequence Length",
            "type": "string",
            "qc_order": 4
        },
        "%GC": {
            "title": "%GC",
            "type": "number",
            "qc_order": 5
        },
        "Per base sequence quality": {
            "title": "Per Base Sequence Quality",
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "qc_order": 6
        },
        "Per tile sequence quality": {
            "title": "Per Tile Sequence Quality",
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "qc_order": 7
        },
        "Per sequence quality scores": {
            "title": "Per Sequence Quality Scores",
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "qc_order": 8
        },
        "Per base sequence content": {
            "title": "Per Base Sequence Content",
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "qc_order": 9
        },
        "Per sequence GC content": {
            "title": "Per Sequence GC Content",
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "qc_order": 10
        },
        "Per base N content": {
            "title": "Per Base N Content",
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "qc_order": 11
        },
        "Sequence Length Distribution": {
            "title": "Sequence Length Distribution",
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "qc_order": 12
        },
        "Sequence Duplication Levels": {
            "title": "Sequence Duplication Levels",
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "qc_order": 13
        },
        "Overrepresented sequences": {
            "title": "Overrepresented Sequences",
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "qc_order": 14
        },
        "Adapter Content": {
            "title": "Adapter Content",
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "qc_order": 15
        },
        "Kmer Content": {
            "title": "Kmer Content",
            "type": "string",
            "enum": [
                "PASS",
                "FAIL",
                "WARN"
            ],
            "qc_order": 16
        },
        "url": {
            "qc_order": 17
        }
    },
    "facets": {
        "overall_quality_status": {
            "title" : "Overall Quality"
        }
    },
    "columns": {
        "%GC": {
            "title" : "GC content"
        },
        "overall_quality_status": {
            "title" : "Overall Quality",
            "default_hidden": true
        }
    },
    "qc_order": 1
}
