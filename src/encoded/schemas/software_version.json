{
    "title": "Software version",
    "description": "Schema for submitting version of software.",
    "id": "/profiles/software_version.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["software"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid", "aliases"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/standard_status" },
        { "$ref": "mixins.json#/notes" },
        { "$ref": "mixins.json#/submitted"}
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "software": {
            "title": "Software",
            "description": "Unique name of the software package.",
            "comment": "See software.json for available identifiers.",
            "type": "string",
            "linkTo": "software"
        },
        "version": {
            "title": "Version",
            "description": "The version of a particular software.",
            "comment": "The version string when version option is used on the software." ,
            "type": "string"
        },
        "download_checksum": {
            "title": "Download checksum",
            "description": "The checksum of the particular version of software used.",
            "comment": "Prefer SHA-1 of commit id if available, otherwise use md5sum of downloaded software,",
            "type": "string",
            "format": "hex"
        },
        "downloaded_url": {
            "title": "Download URL",
            "description": "An external resource to track version for the software downloaded.",
            "type": "string",
            "format": "uri"
        }
    },
    "facets": {
        "software.software_type": {
            "title": "Software type",
            "type": "array"
        },
        "software.purpose": {
            "title": "Purpose in project",
            "type": "array"
        },
        "software.references.published_by": {
            "title": "Created by",
            "type": "array"
        },
        "software.used_by": {
            "title": "Used by",
            "type": "array"
        },
        "status": {
            "title": "Software status",
            "type": "string"
        }
    },
   "columns": {
        "software.title": {
            "title": "Title",
            "type": "string"
        },
        "software.name": {
            "title": "Name",
            "type": "string"
        },
        "status": {
            "title": "Software status",
            "type": "string"
        },
        "software.url": {
            "title": "URL",
            "type": "string"
        },
        "software.description": {
            "title": "Description",
            "type": "string"
        },
        "software.source_url": {
            "title": "Source URL",
            "type": "string"
        },
        "download_url": {
            "title": "Download URL",
            "type": "string"
        },
        "software.references": {
            "title": "references",
            "type": "array"
        },
        "software.used_by": {
            "title": "Use by project",
            "type": "array"
        },
        "software.software_type": {
            "title": "The classification of the software",
            "type": "array"
        },
        "software.purpose": {
            "title": "Purpose in project",
            "type": "array"
        }
    },
    "boost_values": {
        "uuid": 1.0,
        "version": 1.0,
        "software.title": 1.0,
        "software.name": 1.0,
        "software.purpose": 1.0,
        "software.used_by": 1.0,
        "software.references.title": 1.0
    }
}
