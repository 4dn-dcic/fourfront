
{
    "title": "Data File",
    "description": "Schema for submitting metadata for a data file.",
    "id": "/profiles/file.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["file_format", "award", "lab"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinFacets" : [
        { "$ref": "mixins.json#/facets_common" }
    ],
    "properties": {
        "accession": {
            "accessionType": "FI"
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the task.",
            "type": "string",
            "lookup": 10,
            "formInput": "textarea"
        },
        "filename": {
            "title": "File Name",
            "description": "The local file name used at time of submission. Must be alphanumeric, with the exception of the following special characters: '+=,.@-_'",
            "s3Upload": true,
            "ff_flag": "second round",
            "type": "string",
            "pattern": "^[\\w+=,.@-]*$",
            "exclude_from": ["submit4dn"],
            "comment": "ultimately uploaded filename will be uuid/accession, but filename with no directory will be store in metadata as passed in"
        },
        "file_format": {
            "title": "File Format",
            "type": "string",
            "linkTo": "FileFormat",
            "lookup": 20
        },
        "file_type": {
            "title": "File Type",
            "description": "The type of file based on the information in the file.",
            "type": "string",
            "lookup": 22
        },
        "file_classification": {
            "title": "General Classification",
            "description": "General classification group for the File (raw, processed, ancillary (eg. index files))",
            "internal_comment": "This will control how, when and where a file can be displayed - on pages (eg. ancillary files like index files will show up in workflow_run but not experiment)",
            "type": "string",
            "lookup": 23,
            "enum": [
                "raw file",
                "processed file",
                "ancillary file",
                "other file"
            ]
        },
        "md5sum": {
            "title": "MD5sum",
            "description": "The md5sum of the file being transferred.",
            "comment": "This can vary for files of same content gzipped at different times",
            "type": "string",
            "exclude_from": ["submit4dn"],
            "ff_flag":"clear edit",
            "format": "hex"
        },
        "content_md5sum": {
            "title": "Content MD5sum",
            "description": "The MD5sum of the uncompressed file.",
            "comment": "This is only relavant for gzipped files.",
            "type": "string",
            "exclude_from": ["submit4dn", "FFedit-create"],
            "format": "hex",
            "uniqueKey": "file:content_md5sum"
        },
        "file_size": {
            "title": "File Size",
            "exclude_from": ["submit4dn", "FFedit-create"],
            "description": "Size of file on disk.",
            "comment": "File size is specified in bytes - presumably this can be a calculated property as well",
            "type": "integer"
        },
        "extra_files": {
            "title": "Extra Files",
            "description": "Links to extra files on s3 that don't have associated metadata",
            "type": "array",
            "items": {
                "title": "Extra File",
                "type": "object",
                "required": ["file_format"],
                "additionalProperties": true,
                "properties": {
                    "file_format": {
                        "title": "File Format",
                        "type": "string",
                        "lookup": 400
                    },
                    "href": {
                        "title": "Download URL",
                        "type": "string",
                        "exclude_from": ["submit4dn", "FFedit-create"]
                    },
                    "md5sum": {
                        "title": "MD5sum",
                        "description": "The md5sum of the extra file.",
                        "type": "string",
                        "exclude_from": ["submit4dn", "FFedit-create"],
                        "ff_flag":"clear edit",
                        "format": "hex"
                    },
                    "file_size": {
                        "title": "File Size",
                        "exclude_from": ["submit4dn", "FFedit-create"],
                        "description": "Size of file of the extra file.",
                        "comment": "File size is specified in bytes",
                        "type": "integer"
                    }
                }
            }
        },
        "related_files": {
            "title": "Related Files",
            "description": "Files related to this one",
            "ff_flag": "second round",
            "type": "array",
            "items": {
                "title": "Related File",
                "type": "object",
                "required": ["relationship_type", "file"],
                "additionalProperties": false,
                "properties": {
                    "relationship_type": {
                        "type": "string",
                        "lookup": 31,
                        "description": "A controlled term specifying the relationship between files.",
                        "title": "Relationship Type",
                        "enum": [
                            "supercedes",
                            "is superceded by",
                            "derived from",
                            "parent of",
                            "paired with"
                        ]
                    },
                    "file": {
                        "type": "string",
                        "lookup": 32,
                        "description": "The related file",
                        "linkTo": "File"
                    }
                }
            }
        },
        "restricted": {
            "title": "Is Restricted File",
            "exclude_from": ["submit4dn", "FFedit-create"],
            "description": "A flag to indicate whether this file is subject to restricted access",
            "type": "boolean"
        },
        "status": {
            "title": "Status",
            "type": "string",
            "default": "uploading",
            "permission": "import_items",
            "exclude_from": ["submit4dn"],
            "enum" : [
                "uploading",
                "uploaded",
                "upload failed",
                "deleted",
                "replaced",
                "revoked",
                "archived",
                "released",
                "released to project",
                "archived to project",
                "to be uploaded by workflow"
            ]
        },
        "quality_metric": {
            "type": "string",
            "title": "Quality Metric",
            "description": "The associated QC reports",
            "exclude_from": ["submit4dn", "FFedit-create"],
            "linkTo": "QualityMetric"
        }
    },
    "file_format_file_extension": {
    },
    "facets": {
        "file_type" : {
            "title" : "File Type",
            "descripton" : "Type or categorization of this file."
        },
        "file_format": {
            "title" : "File Format",
            "description" : "Format of the file, i.e. the file extension."
        },
        "experiments.experiment_type" : {
            "title" : "Experiment Type",
            "description" : "Type of experiment to which this file belongs"
        },
        "experiments.biosample.biosource.individual.organism.name" : {
            "title" : "Organism"
        },
        "experiments.biosample.biosource.biosource_type" : {
            "title" : "Biosource Type"
        },
        "experiments.biosample.biosource_summary" : {
            "title" : "Biosource"
        },
        "experiments.digestion_enzyme.name" : {
            "title" : "Enzyme"
        },
        "lab.display_title": {
            "title": "Lab"
        },
        "file_size" : {
            "title" : "File Size",
            "description" : "Filter using range of size of the file",
            "aggregation_type" : "range",
            "ranges" : [
                { "to" : 1024 },
                { "from" : 1024, "to" : 10240 },
                { "from" : 10240, "to" : 102400 },
                { "from" : 102400, "to" : 1048576 },
                { "from" : 1048576, "to" : 10485760 },
                { "from" : 10485760, "to" : 104857600 },
                { "from" : 104857600, "to" : 1073741824 },
                { "from" : 1073741824, "to" : 10737418240 },
                { "from" : 10737418240, "to" : 107374182400 },
                { "from" : 107374182400 }
            ],
            "disabled" : true,
            "comment" : "disabled flag may be removed once we (a) can handle ?field=val1-to-val2 (ranges) in filters and (b) send ranges from FacetList to search URI."
        },
        "public_release" : {
            "title" : "Public Release Date",
            "aggregation_type" : "date_histogram",
            "disabled" : true,
            "comment" : "disabled flag may be removed after we can handle ranges in URI filters."
        }
    },
    "aggregations" : {
        "weekly_interval_public_release" : {
            "date_histogram" : {
                "field": "embedded.public_release",
                "interval": "week",
                "format": "yyyy-MM-dd"
            },
            "aggs" : {
                "file_size_volume" : {
                    "sum" : {
                        "field" : "embedded.file_size"
                    }
                },
                "group_by_award" : {
                    "terms" : {
                        "field": "embedded.award.center_title.raw",
                        "missing" : "No value"
                    },
                    "aggs" : {
                        "file_size_volume" : {
                            "sum" : {
                                "field" : "embedded.file_size"
                            }
                        }
                    }
                }
            }
        }
    },
    "columns": {
        "file_type" : {
            "title" : "File Type"
        },
        "file_format": {
            "title" : "File Format"
        },
        "experiments.display_title": {
            "title": "Experiments"
        },
        "experiments.biosample.biosource.display_title": {
            "title": "Biosource"
        },
        "file_size" : {
            "title" : "File Size"
        }
    }
}
