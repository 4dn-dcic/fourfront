{
    "description": "Schema for reporting the 'edwComparePeaks' output as a quality metric",
    "id": "/profiles/edwcomparepeaks_qc_metric.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["step_run"],
    "additionalProperties": false,
    "identifyingProperties": ["uuid"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "quality_metric.json#/properties" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted"},
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/standard_status"},
        { "$ref": "mixins.json#/assay" }
   ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "attachment": {
            "title": "QC metric document metadata",
            "type": "object",
            "additionalProperties": false,
            "formInput": "file",
            "properties": {
                "download": {
                    "title": "File Name",
                    "type": "string"
                },
                "href": {
                    "comment": "Internal webapp URL for document file",
                    "type": "string"
                },
                "type": {
                    "title": "MIME type",
                    "type": "string",
                    "enum": [
                        "text/plain",
                    ]
                },
                "size": {
                    "title": "File size",
                    "type": "integer"
                }
            }
        },
        "aBaseCount": {
            "type": "number",
            "description": "Base count of first file"
        },
        "bBaseCount": {
            "type": "number",
            "description": "Base count of second file"
        },
        "intersectionSize": {
            "type": "number",
            "description": "Size of intersection"
        },
        "iuRatio": {
            "type": "number",
            "description": "Intersection to Union Ratio"
        },
        "unionSize": {
            "type": "number",
            "description": "Size of Union"
        }
    }
}
